---
import Layout from '../../../layouts/Layout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import { getPostsByCategory } from '../../../lib/queries.js';

// Fetch SEO-related blog posts
const seoPosts = await getPostsByCategory('seo') || [];

const seoCategoryData = {
  title: "SEO & Digital Marketing",
  description: "Comprehensive guides and insights on SEO, digital marketing, and search engine optimization strategies for modern businesses.",
  keywords: ["SEO", "digital marketing", "search engine optimization", "content marketing", "keyword research", "technical SEO"],
  structuredData: {
    type: "collection",
    data: {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "SEO & Digital Marketing",
      "description": "Comprehensive guides and insights on SEO, digital marketing, and search engine optimization strategies for modern businesses.",
      "url": "https://easoftlab.com/blog/seo",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": seoPosts.map((post, index) => ({
          "@type": "ListItem",
          "position": index + 1,
          "item": {
            "@type": "Article",
            "name": post.title,
            "url": `https://easoftlab.com/blog/${post.slug}`,
            "description": post.excerpt
          }
        }))
      }
    }
  }
};
---

<Layout 
  title={seoCategoryData.title}
  description={seoCategoryData.description}
  keywords={seoCategoryData.keywords}
  structuredData={seoCategoryData.structuredData}
  type="article"
>
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Hero Section -->
    <div class="pt-24 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            SEO & Digital Marketing
          </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            Comprehensive guides and insights on SEO, digital marketing, and search engine optimization strategies for modern businesses.
          </p>
          <div class="flex flex-wrap justify-center gap-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Technical SEO</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Content Marketing</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Keyword Research</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Local SEO</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Voice Search</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Breadcrumb Navigation -->
    <Breadcrumb 
      items={[
        { name: "Home", url: "https://easoftlab.com", position: 1 },
        { name: "Blog", url: "https://easoftlab.com/blog", position: 2 },
        { name: "SEO & Digital Marketing", url: "https://easoftlab.com/blog/seo", position: 3 }
      ]} 
    />

    <!-- Content Section -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <h2 class="text-3xl font-bold text-white mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>Latest SEO Articles</h2>
            
            {seoPosts.length > 0 ? (
              <div class="space-y-8">
                {seoPosts.map((post, index) => (
                  <article class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style={`animation-delay: ${index * 100}ms`}>
                    <div class="p-6">
                      <div class="flex items-center mb-4">
                        <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm font-medium border border-primary-400/30">
                          SEO
                        </span>
                        <span class="text-gray-400 text-sm ml-4">
                          {new Date(post.publishedAt).toLocaleDateString()}
                        </span>
                      </div>
                      
                      <h3 class="text-xl font-semibold text-white mb-3">
                        <a href={`/blog/${post.slug}`} class="hover:text-primary-400 transition-colors">
                          {post.title}
                        </a>
                      </h3>
                      
                      <p class="text-gray-300 mb-4 line-clamp-3">
                        {post.excerpt}
                      </p>
                      
                      <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                          {post.author && (
                            <div class="flex items-center">
                              <div class="w-8 h-8 bg-primary-600 rounded-full mr-2 flex items-center justify-center">
                                <span class="text-white text-sm font-semibold">{post.author.charAt(0)}</span>
                              </div>
                              <span class="text-sm text-gray-400">{post.author}</span>
                            </div>
                          )}
                        </div>
                        
                        <a href={`/blog/${post.slug}`} class="text-primary-400 hover:text-primary-300 font-medium text-sm">
                          Read More â†’
                        </a>
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            ) : (
              <div class="text-center py-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
                <h3 class="text-xl font-semibold text-white mb-4">No SEO Articles Yet</h3>
                <p class="text-gray-300 mb-6">We're working on comprehensive SEO content. Check back soon!</p>
                <a href="/blog" class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-6 py-3 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25">
                  View All Articles
                </a>
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <!-- Related Topics -->
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 mb-8 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
              <h3 class="text-lg font-semibold text-white mb-4">Related Topics</h3>
              <div class="space-y-2">
                <a href="/blog/web-development" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  Web Development
                </a>
                <a href="/blog/mobile-development" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  Mobile Development
                </a>
                <a href="/blog/ui-ux-design" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  UI/UX Design
                </a>
                <a href="/blog/digital-transformation" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  Digital Transformation
                </a>
              </div>
            </div>

            <!-- SEO Resources -->
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
              <h3 class="text-lg font-semibold text-white mb-4">SEO Resources</h3>
              <div class="space-y-3">
                <a href="/services/web-development" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  Web Development Services
                </a>
                <a href="/services/mobile-development" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  Mobile App Development
                </a>
                <a href="/contact" class="block text-primary-400 hover:text-primary-300 py-2 transition-colors">
                  Get SEO Consultation
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout> 