---
import Layout from '../../layouts/Layout.astro';
import HowToGuide from '../../components/HowToGuide.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const pageData = {
  title: "How to Optimize Your Website for SEO in 2025",
  description: "Complete step-by-step guide to optimize your website for search engines and improve your rankings in 2025.",
  keywords: ["SEO optimization", "website SEO", "search engine optimization", "technical SEO", "on-page SEO"],
  structuredData: {
    type: "article",
    data: {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "How to Optimize Your Website for SEO in 2025",
      "description": "Complete step-by-step guide to optimize your website for search engines and improve your rankings in 2025.",
      "image": "https://easoftlab.com/images/blog/seo-optimization.jpg",
      "author": {
        "@type": "Person",
        "name": "EA Soft Lab Team"
      },
      "publisher": {
        "@type": "Organization",
        "name": "EA Soft Lab",
        "logo": {
          "@type": "ImageObject",
          "url": "https://easoftlab.com/logo.png"
        }
      },
      "datePublished": "2025-08-03T00:00:00.000Z",
      "dateModified": "2025-08-03T00:00:00.000Z",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://easoftlab.com/blog/how-to-optimize-website-seo"
      }
    }
  }
};

const howToData = {
  title: "How to Optimize Your Website for SEO in 2025",
  description: "Learn the essential steps to optimize your website for search engines and improve your organic rankings with this comprehensive guide.",
  totalTime: "2 hours",
  difficulty: "Intermediate",
  tools: [
    "Google Search Console",
    "Google Analytics",
    "Screaming Frog SEO Spider",
    "GTmetrix",
    "Google PageSpeed Insights"
  ],
  materials: [
    "Access to your website's code",
    "Content management system access",
    "Keyword research tools"
  ],
  steps: [
    {
      name: "Conduct Technical SEO Audit",
      text: "Start by analyzing your website's technical foundation. Check for proper meta tags, structured data, XML sitemap, robots.txt, and site architecture. Use tools like Screaming Frog to identify technical issues.",
      image: "/images/blog/seo-audit.jpg"
    },
    {
      name: "Optimize Page Speed",
      text: "Page speed is crucial for SEO. Compress images, minify CSS/JS, enable browser caching, and use a CDN. Aim for Core Web Vitals scores above 90.",
      image: "/images/blog/page-speed.jpg"
    },
    {
      name: "Research and Implement Keywords",
      text: "Conduct thorough keyword research using tools like Google Keyword Planner. Identify high-volume, low-competition keywords and naturally integrate them into your content.",
      image: "/images/blog/keyword-research.jpg"
    },
    {
      name: "Create High-Quality Content",
      text: "Develop comprehensive, valuable content that answers user queries. Use proper heading structure (H1, H2, H3), include internal links, and ensure content is well-written and informative.",
      image: "/images/blog/content-creation.jpg"
    },
    {
      name: "Optimize for Mobile",
      text: "Ensure your website is mobile-friendly with responsive design. Test on various devices and optimize for mobile-first indexing, as Google prioritizes mobile performance.",
      image: "/images/blog/mobile-optimization.jpg"
    },
    {
      name: "Build Quality Backlinks",
      text: "Focus on earning high-quality backlinks from authoritative websites. Create linkable content, reach out to industry influencers, and participate in relevant online communities.",
      image: "/images/blog/backlink-building.jpg"
    },
    {
      name: "Monitor and Analyze Performance",
      text: "Set up Google Search Console and Analytics to track your SEO performance. Monitor rankings, traffic, and user behavior to identify areas for improvement.",
      image: "/images/blog/performance-monitoring.jpg"
    }
  ],
  author: "EA Soft Lab Team",
  datePublished: "2025-08-03T00:00:00.000Z",
  dateModified: "2025-08-03T00:00:00.000Z",
  category: "SEO",
  tags: ["SEO", "website optimization", "search engine optimization", "technical SEO", "content marketing"]
};
---

<Layout 
  title={pageData.title}
  description={pageData.description}
  keywords={pageData.keywords}
  structuredData={pageData.structuredData}
  type="article"
>
  <!-- Breadcrumb Navigation -->
  <Breadcrumb 
    items={[
      { name: "Home", url: "https://easoftlab.com", position: 1 },
      { name: "Blog", url: "https://easoftlab.com/blog", position: 2 },
      { name: "SEO Guide", url: "https://easoftlab.com/blog/how-to-optimize-website-seo", position: 3 }
    ]} 
  />
  
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Hero Section -->
    <div class="pt-24 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="inline-flex items-center space-x-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-8 shadow-lg opacity-0 transition-all duration-1000 ease-out" data-lazy-animate>
            <span class="text-white/80 text-sm font-medium">How-To Guide</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            How to Optimize Your Website for SEO in 2025
          </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            Complete step-by-step guide to optimize your website for search engines and improve your rankings in 2025.
          </p>
          <div class="flex flex-wrap justify-center gap-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Technical SEO</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Content Optimization</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Mobile SEO</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Performance</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Breadcrumb -->
    <div class="relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <div class="flex items-center space-x-2 text-sm">
            <a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a>
            <span class="text-gray-400">/</span>
            <a href="/blog" class="text-gray-300 hover:text-white transition-colors">Blog</a>
            <span class="text-gray-400">/</span>
            <a href="/blog/seo" class="text-gray-300 hover:text-white transition-colors">SEO</a>
            <span class="text-gray-400">/</span>
            <span class="text-white font-medium">How to Optimize Website SEO</span>
          </div>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
            <HowToGuide {...howToData} />
            
            <!-- Additional Resources -->
            <div class="mt-12 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 shadow-lg">
              <h2 class="text-2xl font-bold text-white mb-6">Additional Resources</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white/10 p-6 rounded-lg">
                  <h3 class="text-lg font-semibold text-white mb-3">Related Articles</h3>
                  <ul class="space-y-2">
                    <li><a href="/blog/technical-seo-guide" class="text-primary-400 hover:text-primary-300 transition-colors">Technical SEO Complete Guide</a></li>
                    <li><a href="/blog/content-marketing-strategy" class="text-primary-400 hover:text-primary-300 transition-colors">Content Marketing Strategy</a></li>
                    <li><a href="/blog/mobile-seo-optimization" class="text-primary-400 hover:text-primary-300 transition-colors">Mobile SEO Optimization</a></li>
                  </ul>
                </div>
                
                <div class="bg-white/10 p-6 rounded-lg">
                  <h3 class="text-lg font-semibold text-white mb-3">SEO Services</h3>
                  <ul class="space-y-2">
                    <li><a href="/services/web-development" class="text-primary-400 hover:text-primary-300 transition-colors">Web Development</a></li>
                    <li><a href="/services/mobile-development" class="text-primary-400 hover:text-primary-300 transition-colors">Mobile Development</a></li>
                    <li><a href="/contact" class="text-primary-400 hover:text-primary-300 transition-colors">SEO Consultation</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 shadow-lg sticky top-24">
              <h3 class="text-lg font-semibold text-white mb-4">Article Info</h3>
              <div class="space-y-4 text-sm">
                <div>
                  <span class="text-gray-400">Reading Time:</span>
                  <span class="text-white ml-2">{howToData.totalTime}</span>
                </div>
                <div>
                  <span class="text-gray-400">Difficulty:</span>
                  <span class="text-white ml-2">{howToData.difficulty}</span>
                </div>
                <div>
                  <span class="text-gray-400">Category:</span>
                  <span class="text-white ml-2">{howToData.category}</span>
                </div>
                <div>
                  <span class="text-gray-400">Published:</span>
                  <span class="text-white ml-2">{new Date(howToData.datePublished).toLocaleDateString()}</span>
                </div>
              </div>
              
              <div class="mt-6 pt-6 border-t border-white/10">
                <h4 class="text-white font-semibold mb-3">Tools Needed</h4>
                <ul class="space-y-2">
                  {howToData.tools.map(tool => (
                    <li class="text-gray-300 text-sm">• {tool}</li>
                  ))}
                </ul>
              </div>
              
              <div class="mt-6 pt-6 border-t border-white/10">
                <h4 class="text-white font-semibold mb-3">Materials</h4>
                <ul class="space-y-2">
                  {howToData.materials.map(material => (
                    <li class="text-gray-300 text-sm">• {material}</li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout> 