    <!-- Breadcrumb Navigation -->
    <Breadcrumb 
      items={[
        { name: "Home", url: "https://easoftlab.com", position: 1 },
        { name: "Services", url: "https://easoftlab.com/services", position: 2 },
        { name: "CRM/ERP Development", url: "https://easoftlab.com/services/crm-erp", position: 3 }
