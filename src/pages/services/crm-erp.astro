---
import Layout from '../../layouts/Layout.astro';
import { getCompanyInfo } from '../../lib/queries.js';
import SanityImage from '../../components/SanityImage.astro';

// Fetch company info for dynamic content
const companyInfo = await getCompanyInfo();

// SEO metadata
const title = 'CRM/ERP Development | EA Soft Lab - Business Management Systems';
const description = 'Professional CRM and ERP development services. We build comprehensive business management systems for customer relationships, resource planning, and operational efficiency.';

// Structured data for this service
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "CRM/ERP Development",
  "description": "Professional CRM and ERP development services. We build comprehensive business management systems for customer relationships, resource planning, and operational efficiency.",
  "url": "https://easoftlab.com/services/crm-erp",
  "provider": {
    "@type": "Organization",
    "name": "EA Soft Lab",
    "url": "https://easoftlab.com"
  },
  "areaServed": ["Worldwide"],
  "serviceType": ["CRM Development", "ERP Development", "Business Software"],
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  }
};
---

<Layout 
  title={title} 
  description={description}
  structuredData={{
    type: 'service',
    data: structuredData
  }}
>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Professional 
            <span class="text-primary-600">CRM/ERP Development</span>
            Services
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            We build comprehensive business management systems that streamline customer relationships, resource planning, and operational efficiency.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-lg font-medium transition-colors duration-200 text-center">
              Get Started
            </a>
            <a href="/portfolio" class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-3 rounded-lg font-medium transition-colors duration-200 text-center">
              View Projects
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="bg-gradient-to-br from-teal-500 to-blue-600 rounded-2xl p-8 shadow-2xl">
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-center space-x-3 mb-4">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              </div>
              <div class="space-y-3">
                <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                <div class="h-4 bg-gray-200 rounded w-1/2"></div>
                <div class="h-4 bg-gray-200 rounded w-5/6"></div>
                <div class="h-4 bg-gray-200 rounded w-2/3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">What We Offer</h2>
        <p class="text-lg text-gray-600">Comprehensive CRM and ERP development solutions</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Customer Relationship Management -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Customer Relationship Management</h3>
          <p class="text-gray-600 mb-4">Comprehensive CRM systems that manage customer interactions, sales pipelines, and customer data effectively.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Lead Management</li>
            <li>• Sales Pipeline</li>
            <li>• Customer Analytics</li>
            <li>• Communication Tools</li>
          </ul>
        </div>

        <!-- Enterprise Resource Planning -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Enterprise Resource Planning</h3>
          <p class="text-gray-600 mb-4">Integrated ERP systems that manage business processes, inventory, finance, and human resources.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Inventory Management</li>
            <li>• Financial Management</li>
            <li>• HR Management</li>
            <li>• Supply Chain</li>
          </ul>
        </div>

        <!-- Business Intelligence -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Business Intelligence</h3>
          <p class="text-gray-600 mb-4">Advanced analytics and reporting tools that provide insights into business performance and trends.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Data Analytics</li>
            <li>• Custom Reports</li>
            <li>• Performance Dashboards</li>
            <li>• Predictive Analytics</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Streamline Your Business Operations?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Let's build a comprehensive CRM/ERP system that optimizes your business processes and drives growth
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200">
          Get a Quote
        </a>
        <a href="/portfolio" class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors duration-200">
          View Our Work
        </a>
      </div>
    </div>
  </section>
</Layout> 