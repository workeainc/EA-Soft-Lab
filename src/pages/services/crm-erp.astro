    <!-- FAQ Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What's the difference between CRM and ERP systems?",
          "acceptedAnswer": {
            "@type": "Answer",
