---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

// SEO metadata
const title = 'CRM/ERP Development Services | EA Soft Lab - Business Management Systems';
const description = 'Custom CRM and ERP development services. Build comprehensive business management systems that streamline operations and boost productivity.';
---

<Layout title={title} description={description}>
  <!-- Main Content with Continuous Dark Background -->
