    <!-- Breadcrumb Navigation -->
    <Breadcrumb 
      items={[
        { name: "Home", url: "https://easoftlab.com", position: 1 },
        { name: "Services", url: "https://easoftlab.com/services", position: 2 },
        { name: "Image Tools", url: "https://easoftlab.com/services/image-tools", position: 3 }
