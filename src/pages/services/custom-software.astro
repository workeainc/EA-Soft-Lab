---
import Layout from '../../layouts/Layout.astro';
import { getCompanyInfo } from '../../lib/queries.js';
import SanityImage from '../../components/SanityImage.astro';

// Fetch company info for dynamic content
const companyInfo = await getCompanyInfo();

// SEO metadata
const title = 'Custom Software Solutions | EA Soft Lab - Tailored Business Software';
const description = 'Custom software solutions designed specifically for your business needs. From enterprise applications to workflow automation, we build scalable solutions that drive efficiency.';

// Structured data for this service
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Custom Software Solutions",
  "description": "Custom software solutions designed specifically for your business needs. From enterprise applications to workflow automation, we build scalable solutions that drive efficiency.",
  "url": "https://easoftlab.com/services/custom-software",
  "provider": {
    "@type": "Organization",
    "name": "EA Soft Lab",
    "url": "https://easoftlab.com"
  },
  "areaServed": ["Worldwide"],
  "serviceType": ["Custom Software", "Enterprise Software"],
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  }
};
---

<Layout 
  title={title} 
  description={description}
  structuredData={{
    type: 'service',
    data: structuredData
  }}
>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Custom 
            <span class="text-primary-600">Software Solutions</span>
            for Your Business
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            We design and develop tailored software solutions that perfectly align with your business processes, goals, and unique requirements.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-lg font-medium transition-colors duration-200 text-center">
              Get Started
            </a>
            <a href="/portfolio" class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-3 rounded-lg font-medium transition-colors duration-200 text-center">
              View Projects
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl p-8 shadow-2xl">
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-center space-x-3 mb-4">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              </div>
              <div class="space-y-3">
                <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                <div class="h-4 bg-gray-200 rounded w-1/2"></div>
                <div class="h-4 bg-gray-200 rounded w-5/6"></div>
                <div class="h-4 bg-gray-200 rounded w-2/3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">What We Offer</h2>
        <p class="text-lg text-gray-600">Comprehensive custom software solutions for modern businesses</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Enterprise Applications -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Enterprise Applications</h3>
          <p class="text-gray-600 mb-4">Scalable enterprise software solutions that handle complex business operations and large user bases.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Business Process Management</li>
            <li>• Resource Planning Systems</li>
            <li>• Customer Relationship Management</li>
            <li>• Enterprise Resource Planning</li>
          </ul>
        </div>

        <!-- Workflow Automation -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Workflow Automation</h3>
          <p class="text-gray-600 mb-4">Automate repetitive tasks and streamline business processes to improve efficiency and reduce errors.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Process Automation</li>
            <li>• Task Management</li>
            <li>• Approval Workflows</li>
            <li>• Integration Systems</li>
          </ul>
        </div>

        <!-- Data Management Systems -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Data Management Systems</h3>
          <p class="text-gray-600 mb-4">Comprehensive data management solutions for collecting, processing, and analyzing business information.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Database Design</li>
            <li>• Data Analytics</li>
            <li>• Reporting Systems</li>
            <li>• Business Intelligence</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Technologies -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Technologies We Use</h2>
        <p class="text-lg text-gray-600">Modern, scalable technologies for enterprise solutions</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-blue-600">Java</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Java</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-green-600">Python</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Python</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-blue-500">.NET</span>
          </div>
          <p class="text-sm font-medium text-gray-700">.NET</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-orange-600">Node</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Node.js</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-blue-600">AWS</span>
          </div>
          <p class="text-sm font-medium text-gray-700">AWS</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-green-600">Azure</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Azure</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Development Process</h2>
        <p class="text-lg text-gray-600">A proven methodology for successful custom software development</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">1</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Discovery</h3>
          <p class="text-gray-600">Understanding your business processes and software requirements</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">2</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Architecture</h3>
          <p class="text-gray-600">Designing scalable software architecture and technical specifications</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">3</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Development</h3>
          <p class="text-gray-600">Building your custom software with modern technologies</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">4</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Deployment</h3>
          <p class="text-gray-600">Launching and maintaining your custom software solution</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Build Your Custom Software?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Let's discuss your business needs and create a custom software solution that drives growth
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200">
          Get a Quote
        </a>
        <a href="/portfolio" class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors duration-200">
          View Our Work
        </a>
      </div>
    </div>
  </section>
</Layout> 