---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

// SEO metadata
const title = 'Mobile App Development Services | EA Soft Lab - iOS & Android Apps';
const description = 'Professional mobile app development for iOS and Android. Create engaging, high-performance mobile applications that drive user engagement.';
---

<Layout title={title} description={description}>
  <!-- Main Content with Continuous Dark Background -->
