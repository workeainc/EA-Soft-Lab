---
import Layout from '../../layouts/Layout.astro';
import { getCompanyInfo } from '../../lib/queries.js';
import SanityImage from '../../components/SanityImage.astro';

// Fetch company info for dynamic content
const companyInfo = await getCompanyInfo();

// SEO metadata
const title = 'Mobile App Development | EA Soft Lab - iOS & Android Apps';
const description = 'Professional mobile app development for iOS and Android. Native and cross-platform solutions with modern technologies and best practices.';

// Structured data for this service
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Mobile App Development",
  "description": "Professional mobile app development for iOS and Android platforms. Native and cross-platform solutions with modern technologies.",
  "url": "https://easoftlab.com/services/mobile-development",
  "provider": {
    "@type": "Organization",
    "name": "EA Soft Lab",
    "url": "https://easoftlab.com"
  },
  "areaServed": ["Worldwide"],
  "serviceType": ["Mobile Development", "App Development"],
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  }
};
---

<Layout 
  title={title} 
  description={description}
  structuredData={{
    type: 'service',
    data: structuredData
  }}
>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Professional 
            <span class="text-primary-600">Mobile App</span>
            Development
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            We create native and cross-platform mobile applications that deliver exceptional user experiences on iOS and Android platforms.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-lg font-medium transition-colors duration-200 text-center">
              Get Started
            </a>
            <a href="/portfolio" class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-3 rounded-lg font-medium transition-colors duration-200 text-center">
              View Projects
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="bg-gradient-to-br from-green-500 to-blue-600 rounded-2xl p-8 shadow-2xl">
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-center space-x-3 mb-4">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              </div>
              <div class="space-y-3">
                <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                <div class="h-4 bg-gray-200 rounded w-1/2"></div>
                <div class="h-4 bg-gray-200 rounded w-5/6"></div>
                <div class="h-4 bg-gray-200 rounded w-2/3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">What We Offer</h2>
        <p class="text-lg text-gray-600">Comprehensive mobile app development solutions</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Native iOS Development -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Native iOS Development</h3>
          <p class="text-gray-600 mb-4">High-performance iOS applications built with Swift and SwiftUI for optimal user experience.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Swift & SwiftUI</li>
            <li>• iOS App Store</li>
            <li>• Apple Guidelines</li>
            <li>• Performance Optimization</li>
          </ul>
        </div>

        <!-- Native Android Development -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Native Android Development</h3>
          <p class="text-gray-600 mb-4">Robust Android applications using Kotlin and Jetpack Compose for modern UI development.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Kotlin & Jetpack Compose</li>
            <li>• Google Play Store</li>
            <li>• Material Design</li>
            <li>• Performance Optimization</li>
          </ul>
        </div>

        <!-- Cross-Platform Development -->
        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Cross-Platform Development</h3>
          <p class="text-gray-600 mb-4">Single codebase solutions using React Native and Flutter for faster development and deployment.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• React Native</li>
            <li>• Flutter</li>
            <li>• Single Codebase</li>
            <li>• Faster Development</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Technologies -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Technologies We Use</h2>
        <p class="text-lg text-gray-600">Modern mobile development technologies</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-blue-600">Swift</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Swift</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-green-600">Kotlin</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Kotlin</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-blue-500">React</span>
          </div>
          <p class="text-sm font-medium text-gray-700">React Native</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-blue-600">Flutter</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Flutter</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-orange-600">Firebase</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Firebase</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl font-bold text-green-600">AWS</span>
          </div>
          <p class="text-sm font-medium text-gray-700">AWS</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Development Process</h2>
        <p class="text-lg text-gray-600">A proven methodology for successful mobile app development</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">1</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Discovery</h3>
          <p class="text-gray-600">Understanding your app requirements and target audience</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">2</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Design</h3>
          <p class="text-gray-600">Creating intuitive UI/UX designs and wireframes</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">3</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Development</h3>
          <p class="text-gray-600">Building your mobile app with modern technologies</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">4</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Launch</h3>
          <p class="text-gray-600">Publishing to app stores and ongoing maintenance</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Build Your Mobile App?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Let's discuss your mobile app idea and create a solution that users love
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200">
          Get a Quote
        </a>
        <a href="/portfolio" class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors duration-200">
          View Our Work
        </a>
      </div>
    </div>
  </section>
</Layout> 