  technologies: ["React", "Vue.js", "Node.js", "Python", "PHP", "WordPress"],
  pricing: {
    startingPrice: "$5,000",
    pricingModel: "Project-based",
    pricingDetails: "Custom pricing based on project scope and requirements"
