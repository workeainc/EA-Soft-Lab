---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import ServicesOverview from '../../components/ServicesOverview.astro';
import Technologies from '../../components/Technologies.astro';
import Process from '../../components/Process.astro';
import CTA from '../../components/CTA.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

// SEO metadata
const title = 'E-commerce Software Solutions | EA Soft Lab - Online Retail Technology';
const description = 'Custom e-commerce software solutions for online retail businesses. Build scalable online stores, inventory management, and payment processing systems.';
const structuredData = {
  type: 'service',
  data: {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "E-commerce Software Development",
    "description": "Comprehensive e-commerce development services including custom platforms, marketplace solutions, and digital commerce optimization",
    "url": "https://easoftlab.com/industries/ecommerce",
    "provider": {
      "@type": "Organization",
      "name": "EA Soft Lab"
    },
    "areaServed": "Worldwide",
    "serviceType": "E-commerce Development",
    "offers": {
      "@type": "Offer",
      "description": "Custom e-commerce platform development, marketplace solutions, and digital commerce optimization"
    }
  }
