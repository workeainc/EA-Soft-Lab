---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Hero from '../../components/Hero.astro';
import ServicesOverview from '../../components/ServicesOverview.astro';
import Technologies from '../../components/Technologies.astro';
import Process from '../../components/Process.astro';
import CTA from '../../components/CTA.astro';

const title = "Healthcare Software Development Services | EA Soft Lab";
const description = "Transform healthcare delivery with our comprehensive software solutions. From patient management systems to telemedicine platforms, we help healthcare providers improve patient care and operational efficiency.";
const structuredData = {
  type: 'service',
  data: {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Healthcare Software Development",
    "description": "Comprehensive healthcare software solutions including patient management systems, telemedicine platforms, and healthcare automation tools",
    "url": "https://easoftlab.com/industries/healthcare",
    "provider": {
      "@type": "Organization",
      "name": "EA Soft Lab"
    },
    "areaServed": "Worldwide",
    "serviceType": "Healthcare Development",
    "offers": {
      "@type": "Offer",
      "description": "Patient management systems, telemedicine platforms, EHR solutions, and healthcare automation tools"
    }
