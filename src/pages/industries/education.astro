    "description": "Comprehensive education software solutions including learning management systems, virtual classrooms, and educational technology platforms",
    "url": "https://easoftlab.com/industries/education",
    "provider": {
      "@type": "Organization",
      "name": "EA Soft Lab"
    },
    "areaServed": "Worldwide",
    "serviceType": "Education Development",
    "offers": {
      "@type": "Offer",
      "description": "Learning management systems, virtual classrooms, educational apps, and student engagement platforms"
