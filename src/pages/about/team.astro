---
import Layout from '../../layouts/Layout.astro';
import Organization from '../../components/structured-data/Organization.astro';

const title = "Meet Our Team - EA Soft Lab's Expert Developers & Leaders";
const description = "Meet the talented team behind EA Soft Lab. Our experienced developers, designers, and leaders are passionate about delivering exceptional software solutions.";
const structuredData = {
  type: 'organization',
  data: {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "EA Soft Lab",
    "url": "https://easoftlab.com/about/team",
    "logo": "https://easoftlab.com/logo.png",
    "description": "Meet the talented team behind EA Soft Lab's software development services",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "US"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "email": "contact@easoftlab.com"
    },
    "employee": [
      {
        "@type": "Person",
        "name": "Alex Johnson",
        "jobTitle": "CEO & Founder",
        "description": "Experienced technology leader with 10+ years in software development"
      },
      {
        "@type": "Person",
        "name": "Sarah Chen",
        "jobTitle": "CTO",
        "description": "Technical expert specializing in scalable architecture and cloud solutions"
      },
      {
        "@type": "Person",
        "name": "Mike Rodriguez",
        "jobTitle": "Lead Developer",
        "description": "Full-stack developer with expertise in modern web technologies"
      }
    ]
  }
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <Organization data={structuredData.data} />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-6">Meet Our Team</h1>
        <p class="text-xl mb-8">The passionate professionals behind EA Soft Lab's success</p>
        <p class="text-lg">Our diverse team brings together expertise in development, design, and business strategy to deliver exceptional software solutions.</p>
      </div>
    </div>
  </section>

  <!-- Leadership Team -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Leadership Team</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <!-- CEO -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-32"></div>
            <div class="p-6 text-center">
              <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-gray-800">Alex Johnson</h3>
              <p class="text-blue-600 font-semibold mb-4">CEO & Founder</p>
              <p class="text-gray-600 mb-4">
                With over 10 years of experience in software development and business strategy, Alex leads our company with a vision for innovation and client success.
              </p>
              <div class="flex justify-center space-x-4">
                <a href="#" class="text-blue-600 hover:text-blue-800">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- CTO -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-green-500 to-blue-600 h-32"></div>
            <div class="p-6 text-center">
              <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-gray-800">Sarah Chen</h3>
              <p class="text-green-600 font-semibold mb-4">CTO</p>
              <p class="text-gray-600 mb-4">
                Technical expert with deep knowledge in scalable architecture, cloud solutions, and emerging technologies. Sarah ensures our technical excellence.
              </p>
              <div class="flex justify-center space-x-4">
                <a href="#" class="text-green-600 hover:text-green-800">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Lead Developer -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-purple-500 to-pink-600 h-32"></div>
            <div class="p-6 text-center">
              <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-gray-800">Mike Rodriguez</h3>
              <p class="text-purple-600 font-semibold mb-4">Lead Developer</p>
              <p class="text-gray-600 mb-4">
                Full-stack developer with expertise in modern web technologies. Mike leads our development team and ensures code quality and best practices.
              </p>
              <div class="flex justify-center space-x-4">
                <a href="#" class="text-purple-600 hover:text-purple-800">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Development Team -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Development Team</h2>
        <div class="grid md:grid-cols-4 gap-6">
          <!-- Team Member 1 -->
          <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <div class="w-20 h-20 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">David Kim</h3>
            <p class="text-blue-600 text-sm mb-3">Frontend Developer</p>
            <p class="text-gray-600 text-sm">React, Vue.js, TypeScript</p>
          </div>

          <!-- Team Member 2 -->
          <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <div class="w-20 h-20 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">Emily Watson</h3>
            <p class="text-green-600 text-sm mb-3">Backend Developer</p>
            <p class="text-gray-600 text-sm">Node.js, Python, AWS</p>
          </div>

          <!-- Team Member 3 -->
          <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <div class="w-20 h-20 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">James Wilson</h3>
            <p class="text-purple-600 text-sm mb-3">Mobile Developer</p>
            <p class="text-gray-600 text-sm">React Native, Flutter</p>
          </div>

          <!-- Team Member 4 -->
          <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <div class="w-20 h-20 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">Lisa Park</h3>
            <p class="text-orange-600 text-sm mb-3">UI/UX Designer</p>
            <p class="text-gray-600 text-sm">Figma, Adobe XD</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Culture -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Our Team Culture</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Collaboration & Innovation</h3>
            <p class="text-gray-600 mb-6">
              We foster a culture of collaboration where every team member's voice is heard. Our diverse backgrounds and perspectives drive innovation and creative problem-solving.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Regular team brainstorming sessions
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Cross-functional project teams
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Knowledge sharing initiatives
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Continuous Learning</h3>
            <p class="text-gray-600 mb-6">
              We believe in continuous learning and professional development. Our team regularly participates in training programs, conferences, and skill-building workshops.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Conference attendance support
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Online course subscriptions
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Internal tech talks
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Join Our Team -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">Join Our Team</h2>
        <p class="text-lg text-gray-600 mb-8">
          We're always looking for talented individuals who are passionate about technology and innovation. 
          If you're interested in joining our team, we'd love to hear from you.
        </p>
        <div class="grid md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4 text-gray-800">Open Positions</h3>
            <ul class="space-y-2 text-gray-600 text-left">
              <li>• Senior Full-Stack Developer</li>
              <li>• Mobile App Developer</li>
              <li>• UI/UX Designer</li>
              <li>• DevOps Engineer</li>
            </ul>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4 text-gray-800">Benefits</h3>
            <ul class="space-y-2 text-gray-600 text-left">
              <li>• Competitive salary</li>
              <li>• Flexible work hours</li>
              <li>• Remote work options</li>
              <li>• Professional development</li>
            </ul>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4 text-gray-800">Culture</h3>
            <ul class="space-y-2 text-gray-600 text-left">
              <li>• Collaborative environment</li>
              <li>• Innovation-focused</li>
              <li>• Work-life balance</li>
              <li>• Growth opportunities</li>
            </ul>
          </div>
        </div>
        <a href="/about/careers" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300">
          View Open Positions
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Work With Our Team?</h2>
      <p class="text-xl mb-8">Let's discuss your project and see how our talented team can help bring your vision to life.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
          Start a Project
        </a>
        <a href="/services" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition duration-300">
          Our Services
        </a>
      </div>
    </div>
  </section>
</Layout> 