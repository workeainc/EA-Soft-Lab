---
import Layout from '../../layouts/Layout.astro';
import Organization from '../../components/structured-data/Organization.astro';

const title = "Careers at EA Soft Lab - Join Our Growing Team";
const description = "Explore exciting career opportunities at EA Soft Lab. Join our team of passionate developers, designers, and technology professionals. View open positions and apply today.";
const structuredData = {
  type: 'organization',
  data: {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "EA Soft Lab",
    "url": "https://easoftlab.com/about/careers",
    "logo": "https://easoftlab.com/logo.png",
    "description": "Career opportunities at EA Soft Lab - Join our growing team of technology professionals",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "US"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "email": "careers@easoftlab.com"
    }
  }
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <Organization data={structuredData.data} />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-6">Join Our Team</h1>
        <p class="text-xl mb-8">Build the future with us at EA Soft Lab</p>
        <p class="text-lg mb-8">We're looking for passionate individuals who are excited about technology and innovation.</p>
        <a href="#open-positions" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
          View Open Positions
        </a>
      </div>
    </div>
  </section>

  <!-- Why Work With Us -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Why Work With Us?</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Flexible Work Environment</h3>
            <p class="text-gray-600">
              Enjoy flexible work hours, remote work options, and a healthy work-life balance.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Innovation & Growth</h3>
            <p class="text-gray-600">
              Work on cutting-edge technologies and challenging projects that push boundaries.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Collaborative Culture</h3>
            <p class="text-gray-600">
              Join a team that values collaboration, knowledge sharing, and mutual support.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Open Positions -->
  <section id="open-positions" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Open Positions</h2>
        <div class="space-y-6">
          <!-- Position 1 -->
          <div class="bg-white rounded-lg shadow-md p-8 border-l-4 border-blue-600">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
              <div class="mb-4 md:mb-0">
                <h3 class="text-2xl font-bold text-gray-800 mb-2">Senior Full-Stack Developer</h3>
                <p class="text-gray-600 mb-4">Join our development team to build scalable web applications.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">React</span>
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Node.js</span>
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">TypeScript</span>
                </div>
              </div>
              <div class="text-right">
                <p class="text-gray-600 mb-2">Full-time • Remote</p>
                <a href="mailto:careers@easoftlab.com?subject=Application for Senior Full-Stack Developer" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                  Apply Now
                </a>
              </div>
            </div>
          </div>

          <!-- Position 2 -->
          <div class="bg-white rounded-lg shadow-md p-8 border-l-4 border-green-600">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
              <div class="mb-4 md:mb-0">
                <h3 class="text-2xl font-bold text-gray-800 mb-2">Mobile App Developer</h3>
                <p class="text-gray-600 mb-4">Create cutting-edge mobile applications for iOS and Android.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">React Native</span>
                  <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">Flutter</span>
                  <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">Swift</span>
                </div>
              </div>
              <div class="text-right">
                <p class="text-gray-600 mb-2">Full-time • Remote</p>
                <a href="mailto:careers@easoftlab.com?subject=Application for Mobile App Developer" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition duration-300">
                  Apply Now
                </a>
              </div>
            </div>
          </div>

          <!-- Position 3 -->
          <div class="bg-white rounded-lg shadow-md p-8 border-l-4 border-purple-600">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
              <div class="mb-4 md:mb-0">
                <h3 class="text-2xl font-bold text-gray-800 mb-2">UI/UX Designer</h3>
                <p class="text-gray-600 mb-4">Design beautiful and intuitive user experiences.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">Figma</span>
                  <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">Adobe XD</span>
                  <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">Prototyping</span>
                </div>
              </div>
              <div class="text-right">
                <p class="text-gray-600 mb-2">Full-time • Remote</p>
                <a href="mailto:careers@easoftlab.com?subject=Application for UI/UX Designer" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition duration-300">
                  Apply Now
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Join Our Team?</h2>
      <p class="text-xl mb-8">Take the first step towards an exciting career at EA Soft Lab.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#open-positions" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
          View Positions
        </a>
        <a href="mailto:careers@easoftlab.com" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition duration-300">
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout> 