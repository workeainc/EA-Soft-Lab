---
import Layout from '../../layouts/Layout.astro';
import Organization from '../../components/structured-data/Organization.astro';

const title = "Our Culture - EA Soft Lab's Values & Work Environment";
const description = "Discover EA Soft Lab's unique culture, values, and work environment. Learn about our collaborative approach, innovation mindset, and commitment to excellence.";
const structuredData = {
  type: 'organization',
  data: {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "EA Soft Lab",
    "url": "https://easoftlab.com/about/culture",
    "logo": "https://easoftlab.com/logo.png",
    "description": "EA Soft Lab's company culture focused on innovation, collaboration, and excellence",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "US"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "email": "contact@easoftlab.com"
    }
  }
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <Organization data={structuredData.data} />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-6">Our Culture</h1>
        <p class="text-xl mb-8">Building a workplace where innovation thrives and people grow</p>
        <p class="text-lg">At EA Soft Lab, we believe that great software comes from great people working in an environment that fosters creativity, collaboration, and continuous learning.</p>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Our Core Values</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-20 h-20 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Innovation</h3>
            <p class="text-gray-600">
              We constantly push boundaries and explore new technologies to deliver cutting-edge solutions.
            </p>
