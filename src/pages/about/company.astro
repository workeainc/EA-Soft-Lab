---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCompanyInfo } from '../../lib/queries.js';

// Fetch company info for dynamic content
const companyInfo = await getCompanyInfo();

// SEO metadata
const title = 'About Our Company | EA Soft Lab - Software Development Company';
const description = 'Learn about EA Soft Lab, a leading software development company specializing in custom solutions, web development, and digital transformation services.';
---

<Layout title={title} description={description}>
  <!-- Breadcrumb Navigation -->
  <Breadcrumb 
    items={[
      { name: "Home", url: "https://easoftlab.com", position: 1 },
      { name: "About", url: "https://easoftlab.com/about", position: 2 },
      { name: "Company", url: "https://easoftlab.com/about/company", position: 3 }
    ]} 
  />
  
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Hero Section -->
    <div class="pt-24 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            About Our Company
          </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            We are a passionate team of developers, designers, and innovators dedicated to creating exceptional digital experiences
          </p>
        </div>
      </div>
    </div>

    <!-- Company Overview -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12">
          <div class="opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
            <h2 class="text-3xl font-bold text-white mb-6">Our Story</h2>
            <p class="text-lg text-gray-300 mb-6">
              Founded with a vision to transform businesses through innovative technology solutions, EA Soft Lab has grown from a small startup to a trusted partner for companies worldwide. Our journey is marked by continuous learning, adaptation, and a commitment to excellence.
            </p>
            <p class="text-lg text-gray-300 mb-6">
              We believe that great software has the power to change the world. That's why we focus on creating solutions that not only meet our clients' immediate needs but also scale with their growth and adapt to future challenges.
            </p>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-400 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                Founded with a vision for innovation
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-400 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                Growing team of passionate professionals
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-400 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                Trusted by companies worldwide
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-400 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                Committed to continuous improvement
              </li>
            </ul>
          </div>

          <div class="opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8">
              <h3 class="text-2xl font-bold text-white mb-4">Our Mission</h3>
              <p class="text-gray-300 mb-6">
                To empower businesses with innovative technology solutions that drive growth, efficiency, and competitive advantage in the digital age.
              </p>
              <h3 class="text-2xl font-bold text-white mb-4">Our Vision</h3>
              <p class="text-gray-300 mb-6">
                To be the leading technology partner that transforms ideas into powerful digital solutions, enabling businesses to thrive in an ever-evolving digital landscape.
              </p>
              <h3 class="text-2xl font-bold text-white mb-4">Our Values</h3>
              <ul class="space-y-2 text-gray-300">
                <li>• Innovation & Creativity</li>
                <li>• Quality & Excellence</li>
                <li>• Client Success</li>
                <li>• Continuous Learning</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Company Stats -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-4">Our Impact</h2>
          <p class="text-lg text-gray-300">Numbers that tell our story</p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-2xl">50+</span>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Projects Completed</h3>
            <p class="text-gray-300">Successfully delivered projects across various industries</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-2xl">25+</span>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Happy Clients</h3>
            <p class="text-gray-300">Long-term partnerships built on trust and results</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-2xl">5+</span>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Years Experience</h3>
            <p class="text-gray-300">Deep expertise in modern technologies and methodologies</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-2xl">100%</span>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Client Satisfaction</h3>
            <p class="text-gray-300">Dedicated to exceeding client expectations</p>
          </div>
        </div>
      </div>
    </div>

    <!-- What We Do -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-4">What We Do</h2>
          <p class="text-lg text-gray-300">Comprehensive software development services</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Custom Development</h3>
            <p class="text-gray-300 mb-4">Tailored software solutions designed to meet your specific business requirements and goals.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Mobile Development</h3>
            <p class="text-gray-300 mb-4">Native and cross-platform mobile applications for iOS and Android platforms.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">UI/UX Design</h3>
            <p class="text-gray-300 mb-4">User-centered design that creates intuitive and engaging digital experiences.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Cloud Solutions</h3>
            <p class="text-gray-300 mb-4">Scalable cloud infrastructure and deployment solutions for modern applications.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1000ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Support & Maintenance</h3>
            <p class="text-gray-300 mb-4">Ongoing support and maintenance to ensure your applications run smoothly.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1200ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Consulting</h3>
            <p class="text-gray-300 mb-4">Strategic technology consulting to help you make informed decisions.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>Ready to Work With Us?</h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          Let's discuss how we can help transform your business with innovative technology solutions
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
          <a href="/contact" class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25 animate-bounce-slow">
            Get Started
          </a>
          <a href="/portfolio" class="bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 shadow-lg animate-bounce-slow animation-delay-200">
            View Our Work
          </a>
        </div>
      </div>
    </div>

  </div>
</Layout> 