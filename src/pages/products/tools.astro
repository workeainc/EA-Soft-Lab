---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Service from '../../components/structured-data/Service.astro';

// SEO metadata
const title = 'Development Tools | EA Soft Lab - Software Development Tools';
const description = 'Professional development tools and utilities designed to streamline software development workflows and boost productivity.';
const structuredData = {
  type: 'service',
  data: {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Development Tools",
    "description": "Professional development tools and utilities for software developers",
    "provider": {
      "@type": "Organization",
      "name": "EA Soft Lab"
    },
    "serviceType": "Software Tools",
    "areaServed": "Worldwide",
    "url": "https://easoftlab.com/products/tools"
  }
};
---

<Layout title={title} description={description}>
  <!-- Breadcrumb Navigation -->
  <Breadcrumb 
    items={[
      { name: "Home", url: "https://easoftlab.com", position: 1 },
      { name: "Products", url: "https://easoftlab.com/products", position: 2 },
      { name: "Development Tools", url: "https://easoftlab.com/products/tools", position: 3 }
    ]} 
  />
  
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Hero Section -->
    <div class="pt-40 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
                  <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          Development Tools
        </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            Professional-grade tools to streamline your development workflow
          </p>
          <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
            Boost productivity with our collection of powerful utilities designed for modern software development.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-800" data-lazy-animate>
            <a href="#tools" class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25">
              Explore Tools
            </a>
            <a href="/contact" class="border-2 border-white text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-white hover:text-gray-900 transition-all duration-300 transform hover:scale-105">
              Get Access
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Tools Overview -->
    <div id="tools" class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Our Development Tools</h2>
          <p class="text-lg text-gray-300">Professional-grade utilities to enhance your development workflow</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Code Generator -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Code Generator</h3>
            <p class="text-gray-300 mb-4">
              Generate boilerplate code, CRUD operations, and API endpoints with our intelligent code generator.
            </p>
            <ul class="text-sm text-gray-300 space-y-1">
              <li>• Multiple framework support</li>
              <li>• Custom templates</li>
              <li>• Database integration</li>
            </ul>
          </div>

          <!-- API Tester -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">API Tester</h3>
            <p class="text-gray-300 mb-4">
              Comprehensive API testing tool with request/response validation and automated testing capabilities.
            </p>
            <ul class="text-sm text-gray-300 space-y-1">
              <li>• REST API testing</li>
              <li>• GraphQL support</li>
              <li>• Automated test suites</li>
            </ul>
          </div>

          <!-- Database Manager -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Database Manager</h3>
            <p class="text-gray-300 mb-4">
              Visual database management tool with schema design, query builder, and migration management.
            </p>
            <ul class="text-sm text-gray-300 space-y-1">
              <li>• Visual schema design</li>
              <li>• Query builder</li>
              <li>• Migration management</li>
            </ul>
          </div>

          <!-- Performance Monitor -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Performance Monitor</h3>
            <p class="text-gray-300 mb-4">
              Real-time performance monitoring and optimization tools for applications and infrastructure.
            </p>
            <ul class="text-sm text-gray-300 space-y-1">
              <li>• Real-time monitoring</li>
              <li>• Performance analytics</li>
              <li>• Optimization insights</li>
            </ul>
          </div>

          <!-- Security Scanner -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1000ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Security Scanner</h3>
            <p class="text-gray-300 mb-4">
              Automated security scanning and vulnerability assessment for code and applications.
            </p>
            <ul class="text-sm text-gray-300 space-y-1">
              <li>• Vulnerability scanning</li>
              <li>• Code analysis</li>
              <li>• Security reports</li>
            </ul>
          </div>

          <!-- Deployment Manager -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1200ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Deployment Manager</h3>
            <p class="text-gray-300 mb-4">
              Streamlined deployment automation with rollback capabilities and environment management.
            </p>
            <ul class="text-sm text-gray-300 space-y-1">
              <li>• Automated deployment</li>
              <li>• Rollback capabilities</li>
              <li>• Environment management</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Key Features</h2>
          <p class="text-lg text-gray-300">Advanced capabilities that set our tools apart</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">High Performance</h3>
            <p class="text-gray-300 text-sm">Optimized for speed and efficiency</p>
          </div>
          
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">Secure</h3>
            <p class="text-gray-300 text-sm">Enterprise-grade security features</p>
          </div>
          
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">User Friendly</h3>
            <p class="text-gray-300 text-sm">Intuitive interface design</p>
          </div>
          
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">Customizable</h3>
            <p class="text-gray-300 text-sm">Adapt to your workflow</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Ready to Boost Your Productivity?</h2>
          <p class="text-xl text-gray-300 mb-8">Get access to our professional development tools and streamline your workflow.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25">
              Get Started
            </a>
            <a href="/contact" class="border-2 border-white text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-white hover:text-gray-900 transition-all duration-300 transform hover:scale-105">
              Learn More
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout> 