---
import Layout from '../../layouts/Layout.astro';
import Service from '../../components/structured-data/Service.astro';

const title = "Coming Soon - New Products & Features | EA Soft Lab";
const description = "Stay updated on EA Soft Lab's upcoming products and features. Be the first to know about our latest innovations and early access opportunities.";
const structuredData = {
  type: 'service',
  data: {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Coming Soon Products",
    "description": "Upcoming products and features from EA Soft Lab",
    "provider": {
      "@type": "Organization",
      "name": "EA Soft Lab"
    },
    "serviceType": "Software Products",
    "areaServed": "Worldwide",
    "url": "https://easoftlab.com/products/coming-soon"
  }
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <Service data={structuredData.data} />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-purple-600 to-pink-600 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-6">Coming Soon</h1>
        <p class="text-xl mb-8">Exciting new products and features are in development</p>
        <p class="text-lg mb-8">Be the first to know about our latest innovations and get early access to cutting-edge solutions.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#products" class="bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
            Explore Products
          </a>
          <a href="#newsletter" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-purple-600 transition duration-300">
            Get Notified
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Products -->
  <section id="products" class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Upcoming Products</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- AI Assistant -->
          <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-purple-600">
            <div class="w-16 h-16 bg-purple-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">AI Development Assistant</h3>
            <p class="text-gray-600 mb-4">
              Intelligent coding assistant that helps developers write better code, debug issues, and optimize performance.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-purple-600 font-semibold">Q2 2024</span>
              <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">In Development</span>
            </div>
          </div>

          <!-- Cloud Platform -->
          <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-blue-600">
            <div class="w-16 h-16 bg-blue-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Enterprise Cloud Platform</h3>
            <p class="text-gray-600 mb-4">
              Comprehensive cloud platform for enterprise applications with advanced security and scalability features.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-blue-600 font-semibold">Q3 2024</span>
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Planning</span>
            </div>
          </div>

          <!-- Mobile Framework -->
          <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-green-600">
            <div class="w-16 h-16 bg-green-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Cross-Platform Mobile Framework</h3>
            <p class="text-gray-600 mb-4">
              Next-generation framework for building native mobile apps with a single codebase for iOS and Android.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-green-600 font-semibold">Q4 2024</span>
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">Research</span>
            </div>
          </div>

          <!-- Analytics Platform -->
          <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-orange-600">
            <div class="w-16 h-16 bg-orange-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Advanced Analytics Platform</h3>
            <p class="text-gray-600 mb-4">
              Real-time analytics and business intelligence platform with AI-powered insights and predictive analytics.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-orange-600 font-semibold">Q1 2025</span>
              <span class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm">Concept</span>
            </div>
          </div>

          <!-- Security Suite -->
          <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-red-600">
            <div class="w-16 h-16 bg-red-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">Enterprise Security Suite</h3>
            <p class="text-gray-600 mb-4">
              Comprehensive security solution with threat detection, vulnerability scanning, and compliance management.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-red-600 font-semibold">Q2 2025</span>
              <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm">Planning</span>
            </div>
          </div>

          <!-- DevOps Platform -->
          <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-indigo-600">
            <div class="w-16 h-16 bg-indigo-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">DevOps Automation Platform</h3>
            <p class="text-gray-600 mb-4">
              End-to-end DevOps automation platform with CI/CD pipelines, infrastructure as code, and monitoring.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-indigo-600 font-semibold">Q3 2025</span>
              <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm">Research</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Development Status -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Development Status</h2>
        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">1</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">Research</h3>
            <p class="text-gray-600 text-sm">Market research and feasibility studies</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">2</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">Planning</h3>
            <p class="text-gray-600 text-sm">Product planning and architecture design</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">3</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">Development</h3>
            <p class="text-gray-600 text-sm">Active development and testing</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">4</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-gray-800">Launch</h3>
            <p class="text-gray-600 text-sm">Product release and market launch</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section id="newsletter" class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">Stay Updated</h2>
        <p class="text-lg text-gray-600 mb-8">
          Be the first to know about our new products, features, and early access opportunities.
        </p>
        <div class="max-w-md mx-auto">
          <form class="flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              placeholder="Enter your email address" 
              class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
              required
            />
            <button 
              type="submit" 
              class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition duration-300"
            >
              Subscribe
            </button>
          </form>
          <p class="text-sm text-gray-500 mt-4">
            We'll never share your email. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Early Access -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">Early Access Program</h2>
        <p class="text-lg text-gray-600 mb-8">
          Join our early access program to test new features and provide feedback before public release.
        </p>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4 text-gray-800">Beta Tester</h3>
            <p class="text-gray-600 mb-6">
              Get early access to new products and features. Help us improve by providing feedback.
            </p>
            <ul class="text-left space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Early access to new features
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Direct feedback channel
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Exclusive beta tester badge
              </li>
            </ul>
            <a href="/contact" class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition duration-300">
              Apply Now
            </a>
          </div>
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4 text-gray-800">Partner Program</h3>
            <p class="text-gray-600 mb-6">
              Strategic partnerships for enterprise customers with custom development and priority support.
            </p>
            <ul class="text-left space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Custom feature development
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Priority support and updates
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Dedicated account manager
              </li>
            </ul>
            <a href="/contact" class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition duration-300">
              Contact Sales
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-purple-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready for the Future?</h2>
      <p class="text-xl mb-8">Join us in building the next generation of software solutions.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
          Get Started
        </a>
        <a href="/contact" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-purple-600 transition duration-300">
          Learn More
        </a>
      </div>
    </div>
  </section>
</Layout> 