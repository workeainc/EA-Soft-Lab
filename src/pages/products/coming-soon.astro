---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Service from '../../components/structured-data/Service.astro';

const title = "Coming Soon - New Products & Features | EA Soft Lab";
const description = "Stay updated on EA Soft Lab's upcoming products and features. Be the first to know about our latest innovations and early access opportunities.";
const structuredData = {
  type: 'service',
  data: {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Coming Soon Products",
    "description": "Upcoming products and features from EA Soft Lab",
    "provider": {
      "@type": "Organization",
      "name": "EA Soft Lab"
    },
    "serviceType": "Software Products",
    "areaServed": "Worldwide",
    "url": "https://easoftlab.com/products/coming-soon"
  }
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <Service data={structuredData.data} />
  
  <!-- Breadcrumb Navigation -->
  <Breadcrumb 
    items={[
      { name: "Home", url: "https://easoftlab.com", position: 1 },
      { name: "Products", url: "https://easoftlab.com/products", position: 2 },
      { name: "Coming Soon", url: "https://easoftlab.com/products/coming-soon", position: 3 }
    ]} 
  />
  
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Hero Section -->
    <div class="pt-24 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            Coming Soon
          </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            Exciting new products and features are in development
          </p>
          <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
            Be the first to know about our latest innovations and get early access to cutting-edge solutions.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-800" data-lazy-animate>
            <a href="#products" class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25">
              Explore Products
            </a>
            <a href="#newsletter" class="border-2 border-white text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-white hover:text-gray-900 transition-all duration-300 transform hover:scale-105">
              Get Notified
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Upcoming Products -->
    <div id="products" class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Upcoming Products</h2>
          <p class="text-lg text-gray-300">Innovative solutions that will transform your development workflow</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- AI Assistant -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">AI Development Assistant</h3>
            <p class="text-gray-300 mb-4">
              Intelligent coding assistant that helps developers write better code, debug issues, and optimize performance.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-primary-400 font-semibold">Q2 2024</span>
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm">In Development</span>
            </div>
          </div>

          <!-- Cloud Platform -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Enterprise Cloud Platform</h3>
            <p class="text-gray-300 mb-4">
              Comprehensive cloud platform for enterprise applications with advanced security and scalability features.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-primary-400 font-semibold">Q3 2024</span>
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm">Planning</span>
            </div>
          </div>

          <!-- Mobile Framework -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Cross-Platform Mobile Framework</h3>
            <p class="text-gray-300 mb-4">
              Next-generation framework for building native mobile apps with a single codebase for iOS and Android.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-primary-400 font-semibold">Q4 2024</span>
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm">Research</span>
            </div>
          </div>

          <!-- Analytics Platform -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Advanced Analytics Platform</h3>
            <p class="text-gray-300 mb-4">
              Real-time analytics and business intelligence platform with AI-powered insights and predictive analytics.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-primary-400 font-semibold">Q1 2025</span>
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm">Concept</span>
            </div>
          </div>

          <!-- Security Suite -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1000ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">Enterprise Security Suite</h3>
            <p class="text-gray-300 mb-4">
              Comprehensive security solution with threat detection, vulnerability scanning, and compliance management.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-primary-400 font-semibold">Q2 2025</span>
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm">Planning</span>
            </div>
          </div>

          <!-- DevOps Platform -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1200ms">
            <div class="w-16 h-16 bg-primary-500/20 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 text-white">DevOps Automation Platform</h3>
            <p class="text-gray-300 mb-4">
              End-to-end DevOps automation platform with CI/CD pipelines, infrastructure as code, and monitoring.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-primary-400 font-semibold">Q3 2025</span>
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm">Research</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Development Status -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Development Status</h2>
          <p class="text-lg text-gray-300">Our systematic approach to product development</p>
        </div>
        
        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">1</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">Research</h3>
            <p class="text-gray-300 text-sm">Market research and feasibility studies</p>
          </div>
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">2</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">Planning</h3>
            <p class="text-gray-300 text-sm">Product planning and architecture design</p>
          </div>
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">3</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">Development</h3>
            <p class="text-gray-300 text-sm">Active development and testing</p>
          </div>
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">4</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-white">Launch</h3>
            <p class="text-gray-300 text-sm">Product release and market launch</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div id="newsletter" class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Stay Updated</h2>
          <p class="text-lg text-gray-300 mb-8">
            Be the first to know about our new products, features, and early access opportunities.
          </p>
          <div class="max-w-md mx-auto">
            <form class="flex flex-col sm:flex-row gap-4">
              <input 
                type="email" 
                placeholder="Enter your email address" 
                class="flex-1 px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-white placeholder-gray-400"
                required
              />
              <button 
                type="submit" 
                class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
              >
                Subscribe
              </button>
            </form>
            <p class="text-sm text-gray-400 mt-4">
              We'll never share your email. Unsubscribe at any time.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Early Access -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-6">Early Access Program</h2>
          <p class="text-lg text-gray-300 mb-8">
            Join our early access program to test new features and provide feedback before public release.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 200ms">
            <h3 class="text-xl font-bold mb-4 text-white">Beta Tester</h3>
            <p class="text-gray-300 mb-6">
              Get early access to new products and features. Help us improve by providing feedback.
            </p>
            <ul class="text-left space-y-2 text-gray-300 mb-6">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-primary-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Early access to new features
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-primary-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
