---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import InternalLinker from '../../components/InternalLinker.astro';

const knowledgeHubData = {
  title: "Knowledge Hub - AI-Optimized Content",
  description: "Comprehensive knowledge base with AI-optimized content, Q&A sections, and semantic search optimization for modern search engines.",
  keywords: ["knowledge hub", "AI search", "semantic search", "Q&A content", "expert insights", "technical guides"],
  structuredData: {
    type: "collection",
    data: {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Knowledge Hub",
      "description": "AI-optimized knowledge base with comprehensive Q&A content",
      "url": "https://easoftlab.com/knowledge-hub",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "item": {
              "@type": "WebPage",
              "name": "Software Development FAQ",
              "url": "https://easoftlab.com/knowledge-hub/software-development-faq"
            }
          },
          {
            "@type": "ListItem",
            "position": 2,
            "item": {
              "@type": "WebPage",
              "name": "Technical Glossary",
              "url": "https://easoftlab.com/knowledge-hub/technical-glossary"
            }
          },
          {
            "@type": "ListItem",
            "position": 3,
            "item": {
              "@type": "WebPage",
              "name": "Best Practices Guide",
              "url": "https://easoftlab.com/knowledge-hub/best-practices"
            }
          }
        ]
      }
    }
  }
};

// AI-optimized content categories
const categories = [
  {
    name: "Software Development",
    description: "Comprehensive guides and Q&A for software development",
    icon: "üíª",
    topics: ["Web Development", "Mobile Development", "Backend Systems", "Database Design"]
  },
  {
    name: "AI & Machine Learning",
    description: "AI implementation and machine learning insights",
    icon: "ü§ñ",
    topics: ["Machine Learning", "Deep Learning", "AI Integration", "Data Science"]
  },
  {
    name: "Digital Transformation",
    description: "Business transformation and technology adoption",
    icon: "üöÄ",
    topics: ["Digital Strategy", "Process Automation", "Cloud Migration", "Legacy Modernization"]
  },
  {
    name: "Technical SEO",
    description: "Advanced SEO techniques and optimization",
    icon: "üîç",
    topics: ["Technical SEO", "Content Optimization", "Performance", "Analytics"]
  }
];

// Sample Q&A content for AI optimization
const qaContent = [
  {
    question: "What is the best approach for modern web development in 2025?",
    answer: "Modern web development in 2025 focuses on performance-first approaches, with frameworks like Astro, Next.js, and Remix leading the way. Key considerations include Core Web Vitals optimization, progressive enhancement, and AI-ready content structure.",
    category: "Software Development",
    tags: ["web development", "performance", "frameworks", "2025"]
  },
  {
    question: "How do I optimize my website for AI search engines?",
    answer: "AI search optimization requires semantic content structure, comprehensive Q&A sections, and natural language processing. Focus on creating content that answers user intent with clear, structured information that AI can easily understand and process.",
    category: "Technical SEO",
    tags: ["AI search", "semantic SEO", "content optimization", "user intent"]
  },
  {
    question: "What are the key factors for successful digital transformation?",
    answer: "Successful digital transformation requires a clear strategy, stakeholder buy-in, technology selection, change management, and continuous iteration. Focus on user experience, data-driven decisions, and scalable architecture.",
    category: "Digital Transformation",
    tags: ["digital transformation", "strategy", "change management", "technology"]
  }
];
---

<Layout 
  title={knowledgeHubData.title}
  description={knowledgeHubData.description}
  keywords={knowledgeHubData.keywords}
  structuredData={knowledgeHubData.structuredData}
  type="article"
>
  <!-- Breadcrumb Navigation -->
  <Breadcrumb 
    items={[
      { name: "Home", url: "https://easoftlab.com", position: 1 },
      { name: "Knowledge Hub", url: "https://easoftlab.com/knowledge-hub", position: 2 }
    ]} 
  />
  
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Hero Section -->
    <div class="pt-24 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            Knowledge Hub
          </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            AI-optimized content library designed for modern search engines and generative AI systems.
          </p>
          <div class="flex flex-wrap justify-center gap-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">AI-Optimized</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Semantic Search</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Q&A Content</span>
            <span class="bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 rounded-full text-white">Expert Insights</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Breadcrumb -->
    <div class="relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <div class="flex items-center space-x-2 text-sm">
            <a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a>
            <span class="text-gray-400">/</span>
            <span class="text-white font-medium">Knowledge Hub</span>
          </div>
        </nav>
      </div>
    </div>

    <!-- Content Section -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Categories Grid -->
        <div class="mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-8">Knowledge Categories</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {categories.map((category, index) => (
              <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style={`animation-delay: ${(index + 1) * 200}ms`}>
                <div class="text-4xl mb-4">{category.icon}</div>
                <h3 class="text-xl font-semibold text-white mb-2">{category.name}</h3>
                <p class="text-gray-300 mb-4">{category.description}</p>
                <div class="space-y-1">
                  {category.topics.map((topic) => (
                    <span class="inline-block bg-primary-500/20 text-primary-400 px-2 py-1 rounded text-sm mr-1 mb-1 border border-primary-400/30">
                      {topic}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Q&A Section -->
        <div class="mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-8">Frequently Asked Questions</h2>
          <div class="space-y-6">
            {qaContent.map((item, index) => (
              <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style={`animation-delay: ${(index + 1) * 200}ms`}>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                      Q
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <button 
                      class="w-full text-left flex justify-between items-center"
                      onclick={`toggleFAQ(${index})`}
                      aria-expanded="false"
                    >
                      <h3 class="text-lg font-semibold text-white mb-3 pr-4">{item.question}</h3>
                      <svg class="w-5 h-5 text-primary-400 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </button>
                    <div id={`faq-answer-${index}`} class="hidden">
                      <div class="bg-white/10 rounded-lg p-4 mb-4">
                        <div class="flex items-start">
                          <div class="flex-shrink-0">
                            <div class="w-6 h-6 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-xs">
                              A
                            </div>
                          </div>
                          <div class="ml-3">
                            <p class="text-gray-300 leading-relaxed">{item.answer}</p>
                          </div>
                        </div>
                      </div>
                      <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                          <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm font-medium border border-primary-400/30">
                            {item.category}
                          </span>
                          <div class="flex space-x-1">
                            {item.tags.map((tag) => (
                              <span class="bg-white/10 text-gray-300 px-2 py-1 rounded text-xs border border-white/20">
                                {tag}
                              </span>
                            ))}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Search Section -->
        <div class="opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-8 text-center">
            <h3 class="text-2xl font-bold text-white mb-4">Search Our Knowledge Base</h3>
            <p class="text-gray-300 mb-6">Find answers to your questions with our AI-powered search</p>
            <div class="max-w-md mx-auto">
              <div class="relative">
                <input 
                  type="text" 
                  placeholder="Search for topics, questions, or solutions..."
                  class="w-full px-4 py-3 border border-white/20 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent bg-white/5 text-white placeholder-gray-400"
                />
                <button class="absolute right-3 top-1/2 transform -translate-y-1/2 bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-md transition-colors">
                  Search
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<!-- FAQ Schema for AI Search -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": qaContent.map((item, index) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
})} />

<script>
  function toggleFAQ(index) {
    const answer = document.getElementById(`faq-answer-${index}`);
    const button = answer.previousElementSibling;
    const icon = button.querySelector('svg');
    
    if (answer.classList.contains('hidden')) {
      answer.classList.remove('hidden');
      button.setAttribute('aria-expanded', 'true');
      icon.style.transform = 'rotate(180deg)';
    } else {
      answer.classList.add('hidden');
      button.setAttribute('aria-expanded', 'false');
      icon.style.transform = 'rotate(0deg)';
    }
  }
</script> 