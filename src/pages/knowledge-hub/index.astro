---
import Layout from '../../layouts/Layout.astro';
import InternalLinker from '../../components/InternalLinker.astro';

const knowledgeHubData = {
  title: "Knowledge Hub - AI-Optimized Content",
  description: "Comprehensive knowledge base with AI-optimized content, Q&A sections, and semantic search optimization for modern search engines.",
  keywords: ["knowledge hub", "AI search", "semantic search", "Q&A content", "expert insights", "technical guides"],
  structuredData: {
    type: "collection",
    data: {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Knowledge Hub",
      "description": "AI-optimized knowledge base with comprehensive Q&A content",
      "url": "https://easoftlab.com/knowledge-hub",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "item": {
              "@type": "WebPage",
              "name": "Software Development FAQ",
              "url": "https://easoftlab.com/knowledge-hub/software-development-faq"
            }
          },
          {
            "@type": "ListItem",
            "position": 2,
            "item": {
              "@type": "WebPage",
              "name": "Technical Glossary",
              "url": "https://easoftlab.com/knowledge-hub/technical-glossary"
            }
          },
          {
            "@type": "ListItem",
            "position": 3,
            "item": {
              "@type": "WebPage",
              "name": "Best Practices Guide",
              "url": "https://easoftlab.com/knowledge-hub/best-practices"
            }
          }
        ]
      }
    }
  }
};

// AI-optimized content categories
const categories = [
  {
    name: "Software Development",
    description: "Comprehensive guides and Q&A for software development",
    icon: "üíª",
    topics: ["Web Development", "Mobile Development", "Backend Systems", "Database Design"]
  },
  {
    name: "AI & Machine Learning",
    description: "AI implementation and machine learning insights",
    icon: "ü§ñ",
    topics: ["Machine Learning", "Deep Learning", "AI Integration", "Data Science"]
  },
  {
    name: "Digital Transformation",
    description: "Business transformation and technology adoption",
    icon: "üöÄ",
    topics: ["Digital Strategy", "Process Automation", "Cloud Migration", "Legacy Modernization"]
  },
  {
    name: "Technical SEO",
    description: "Advanced SEO techniques and optimization",
    icon: "üîç",
    topics: ["Technical SEO", "Content Optimization", "Performance", "Analytics"]
  }
];

// Sample Q&A content for AI optimization
const qaContent = [
  {
    question: "What is the best approach for modern web development in 2025?",
    answer: "Modern web development in 2025 focuses on performance-first approaches, with frameworks like Astro, Next.js, and Remix leading the way. Key considerations include Core Web Vitals optimization, progressive enhancement, and AI-ready content structure.",
    category: "Software Development",
    tags: ["web development", "performance", "frameworks", "2025"]
  },
  {
    question: "How do I optimize my website for AI search engines?",
    answer: "AI search optimization requires semantic content structure, comprehensive Q&A sections, and natural language processing. Focus on creating content that answers user intent with clear, structured information that AI can easily understand and process.",
    category: "Technical SEO",
    tags: ["AI search", "semantic SEO", "content optimization", "user intent"]
  },
  {
    question: "What are the key factors for successful digital transformation?",
    answer: "Successful digital transformation requires a clear strategy, stakeholder buy-in, technology selection, change management, and continuous iteration. Focus on user experience, data-driven decisions, and scalable architecture.",
    category: "Digital Transformation",
    tags: ["digital transformation", "strategy", "change management", "technology"]
  }
];
---

<Layout 
  title={knowledgeHubData.title}
  description={knowledgeHubData.description}
  keywords={knowledgeHubData.keywords}
  structuredData={knowledgeHubData.structuredData}
  type="article"
>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-purple-600 to-blue-600 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold mb-6">Knowledge Hub</h1>
          <p class="text-xl mb-8 max-w-3xl mx-auto">
            AI-optimized content library designed for modern search engines and generative AI systems.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">AI-Optimized</span>
            <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">Semantic Search</span>
            <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">Q&A Content</span>
            <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">Expert Insights</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Breadcrumb -->
    <nav class="bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center space-x-2 py-4 text-sm">
          <a href="/" class="text-gray-500 hover:text-gray-700">Home</a>
          <span class="text-gray-400">/</span>
          <span class="text-gray-900 font-medium">Knowledge Hub</span>
        </div>
      </div>
    </nav>

    <!-- Content Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Categories Grid -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Knowledge Categories</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {categories.map((category) => (
              <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                <div class="text-4xl mb-4">{category.icon}</div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{category.name}</h3>
                <p class="text-gray-600 mb-4">{category.description}</p>
                <div class="space-y-1">
                  {category.topics.map((topic) => (
                    <span class="inline-block bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm mr-1 mb-1">
                      {topic}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Q&A Section -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Frequently Asked Questions</h2>
          <div class="space-y-6">
            {qaContent.map((item, index) => (
              <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                      Q
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">{item.question}</h3>
                    <div class="bg-gray-50 rounded-lg p-4 mb-4">
                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <div class="w-6 h-6 bg-green-600 text-white rounded-full flex items-center justify-center font-bold text-xs">
                            A
                          </div>
                        </div>
                        <div class="ml-3">
                          <p class="text-gray-700 leading-relaxed">{item.answer}</p>
                        </div>
                      </div>
                    </div>
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-4">
                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                          {item.category}
                        </span>
                        <div class="flex space-x-1">
                          {item.tags.map((tag) => (
                            <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">
                              {tag}
                            </span>
                          ))}
                        </div>
                      </div>
                      <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                        Learn More ‚Üí
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- AI Optimization Features -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">AI Search Optimization Features</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl mb-4">üß†</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Semantic Content</h3>
              <p class="text-gray-600">Content structured for AI understanding with natural language processing optimization.</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl mb-4">üîç</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Intent Matching</h3>
              <p class="text-gray-600">Content optimized for user intent and search query understanding.</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl mb-4">üìä</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Structured Data</h3>
              <p class="text-gray-600">Comprehensive schema markup for AI search engine comprehension.</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl mb-4">üí¨</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Q&A Format</h3>
              <p class="text-gray-600">Question-answer content structure for featured snippets and AI responses.</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl mb-4">üéØ</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Topic Clustering</h3>
              <p class="text-gray-600">Semantic topic clusters for comprehensive content coverage.</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl mb-4">üöÄ</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Voice Search</h3>
              <p class="text-gray-600">Conversational content optimized for voice assistants and AI queries.</p>
            </div>
          </div>
        </div>

        <!-- Related Resources -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Related Resources</h3>
          <InternalLinker 
            links={[
              {
                text: "Software Development Services",
                url: "/services/web-development",
                description: "Custom web development solutions",
                category: "Services",
                relevance: 0.9
              },
              {
                text: "SEO Optimization Guide",
                url: "/blog/how-to-optimize-website-seo",
                description: "Complete SEO optimization guide",
                category: "Blog",
                relevance: 0.8
              },
              {
                text: "Contact Our Experts",
                url: "/contact",
                description: "Get expert consultation",
                category: "Contact",
                relevance: 0.7
              }
            ]}
            title="Explore More"
            currentPage="knowledge-hub"
            showRelevance={true}
          />
        </div>
      </div>
    </section>
  </div>
</Layout>

<!-- FAQ Schema for AI Search -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": qaContent.map((item, index) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
})} /> 