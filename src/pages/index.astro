---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { getCompanyInfo, getServices } from '../lib/queries.js';
import SanityImage from '../components/SanityImage.astro';

// Fetch CMS data
const companyInfo = await getCompanyInfo();
const services = await getServices();

// Fallback data in case CMS is not available
const fallbackCompanyInfo = {
  name: "EA Soft Lab",
  tagline: "Innovative Software Solutions for Modern Businesses",
  description: "We specialize in custom software development, web applications, and digital transformation services that drive business growth and operational efficiency.",
  stats: {
    projectsCompleted: 50,
    yearsExperience: 5,
    clientSatisfaction: 100,
    happyClients: 30
  }
};

const fallbackServices = [
  {
    title: "Web Development",
    shortDescription: "Modern, responsive web applications built with cutting-edge technologies for optimal performance and user experience.",
    slug: { current: "web-development" }
  },
  {
    title: "Mobile Applications",
    shortDescription: "Native and cross-platform mobile apps that deliver exceptional user experiences across iOS and Android platforms.",
    slug: { current: "mobile-development" }
  },
  {
    title: "Custom Software",
    shortDescription: "Tailored software solutions designed to streamline your business processes and boost productivity.",
    slug: { current: "custom-software" }
  },
  {
    title: "Cloud Solutions",
    shortDescription: "Scalable cloud infrastructure and migration services to modernize your technology stack.",
    slug: { current: "saas-development" }
  },
  {
    title: "IT Consulting",
    shortDescription: "Strategic technology consulting to help you make informed decisions and achieve digital transformation goals.",
    slug: { current: "crm-erp" }
  },
  {
    title: "Maintenance & Support",
    shortDescription: "Ongoing maintenance, updates, and technical support to ensure your software runs smoothly and securely.",
    slug: { current: "image-tools" }
  }
];

// Use CMS data or fallback
const company = companyInfo || fallbackCompanyInfo;
const servicesList = services?.length > 0 ? services : fallbackServices;
---

<Layout title={company.seo?.metaTitle || "EA Soft Lab - Innovative Software Solutions"} description={company.seo?.metaDescription || "Leading software development company specializing in custom solutions, web development, and digital transformation services."}>
  
  <!-- Breadcrumb Navigation -->
  <Breadcrumb 
    items={[
      { name: "Home", url: "https://easoftlab.com", position: 1 }
    ]} 
    showVisual={false}
  />
  
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden z-0">
      <!-- Glowing curved lines -->
      <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-full h-96">
        <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-96 h-96 bg-gradient-to-r from-primary-500/10 to-accent-500/10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-64 h-64 bg-gradient-to-r from-accent-500/15 to-primary-500/15 rounded-full blur-2xl animate-pulse delay-1000"></div>
      </div>
      
      <!-- Floating particles -->
      <div class="absolute top-20 left-10 w-2 h-2 bg-primary-400 rounded-full animate-float"></div>
      <div class="absolute top-40 right-20 w-1 h-1 bg-accent-400 rounded-full animate-float delay-500"></div>
      <div class="absolute bottom-40 left-20 w-1.5 h-1.5 bg-primary-300 rounded-full animate-float delay-1000"></div>
      <div class="absolute bottom-20 right-10 w-1 h-1 bg-accent-300 rounded-full animate-float delay-1500"></div>
    </div>

    <!-- Hero Section -->
    <div class="min-h-screen flex items-center relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Update Badge -->
          <div class="inline-flex items-center space-x-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-8 shadow-lg opacity-0 transition-all duration-1000 ease-out" data-lazy-animate>
            <div class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></div>
            <span class="text-white/80 text-sm font-medium">New updates!</span>
          </div>

          <!-- Main Headline -->
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            Amplify your next
            <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent animate-gradient">software project</span>
          </h1>

          <!-- Description -->
          <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto leading-relaxed opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            An electric software development company for the next killer business solution. 
            Custom development, web apps, mobile apps, cloud solutions - all ready to scale.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
            <a
              href="/contact"
              class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25 animate-bounce-slow"
            >
              Get Started
            </a>
            <a
              href="/portfolio"
              class="bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 flex items-center justify-center space-x-2 shadow-lg animate-bounce-slow animation-delay-200"
            >
