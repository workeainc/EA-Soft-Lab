          <p class="text-gray-300 text-sm font-medium uppercase tracking-wider">Trusted by Industry Leaders</p>
        </div>
        
        <!-- Horizontal Scrolling Container -->
        <div class="relative overflow-hidden opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
