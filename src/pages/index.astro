              <div class="text-white font-bold text-xl hover:text-primary-400 transition-colors duration-300 opacity-60 hover:opacity-100">Node.js</div>
              <div class="text-white font-bold text-xl hover:text-primary-400 transition-colors duration-300 opacity-60 hover:opacity-100">AWS</div>
              <div class="text-white font-bold text-xl hover:text-primary-400 transition-colors duration-300 opacity-60 hover:opacity-100">MongoDB</div>
              <div class="text-white font-bold text-xl hover:text-primary-400 transition-colors duration-300 opacity-60 hover:opacity-100">Docker</div>
              <div class="text-white font-bold text-xl hover:text-primary-400 transition-colors duration-300 opacity-60 hover:opacity-100">Kubernetes</div>
