---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCompanyInfo, getServices } from '../lib/queries.js';
import SanityImage from '../components/SanityImage.astro';

// Fetch CMS data
const companyInfo = await getCompanyInfo();
const services = await getServices();

// Fallback data in case CMS is not available
const fallbackCompanyInfo = {
  name: "EA Soft Lab",
  tagline: "Innovative Software Solutions for Modern Businesses",
  description: "We specialize in custom software development, web applications, and digital transformation services that drive business growth and operational efficiency.",
  stats: {
    projectsCompleted: 50,
    yearsExperience: 5,
    clientSatisfaction: 100,
    happyClients: 30
  }
};

const fallbackServices = [
  {
    title: "Web Development",
    shortDescription: "Modern, responsive web applications built with cutting-edge technologies for optimal performance and user experience.",
    slug: { current: "web-development" }
  },
  {
    title: "Mobile Applications",
    shortDescription: "Native and cross-platform mobile apps that deliver exceptional user experiences across iOS and Android platforms.",
    slug: { current: "mobile-development" }
  },
  {
    title: "Custom Software",
    shortDescription: "Tailored software solutions designed to streamline your business processes and boost productivity.",
    slug: { current: "custom-software" }
  },
  {
    title: "Cloud Solutions",
    shortDescription: "Scalable cloud infrastructure and migration services to modernize your technology stack.",
    slug: { current: "saas-development" }
  },
  {
    title: "IT Consulting",
    shortDescription: "Strategic technology consulting to help you make informed decisions and achieve digital transformation goals.",
    slug: { current: "crm-erp" }
  },
  {
    title: "Maintenance & Support",
    shortDescription: "Ongoing maintenance, updates, and technical support to ensure your software runs smoothly and securely.",
    slug: { current: "image-tools" }
  }
];

// Use CMS data or fallback
const company = companyInfo || fallbackCompanyInfo;
const servicesList = services?.length > 0 ? services : fallbackServices;
---

<Layout title={company.seo?.metaTitle || "EA Soft Lab - Innovative Software Solutions"} description={company.seo?.metaDescription || "Leading software development company specializing in custom solutions, web development, and digital transformation services."}>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="animate-fade-in">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
            {company.tagline || "Innovative Software Solutions for"} 
            <span class="text-primary-600">{company.name || "Modern Businesses"}</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            {company.description || "We specialize in custom software development, web applications, and digital transformation services that drive business growth and operational efficiency."}
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/contact"
              class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200 text-center"
            >
              Start Your Project
            </a>
            <a
              href="/portfolio"
              class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200 text-center"
            >
              View Our Work
            </a>
          </div>
        </div>
        <div class="animate-slide-up">
          <div class="relative">
            <img src="/images/hero-illustration.svg" alt="Software Development Illustration" class="w-full h-auto" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Services
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We offer comprehensive software solutions tailored to your business needs
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {servicesList.map((service, index) => (
          <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border border-gray-100">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
              {service.icon ? (
                <SanityImage image={service.icon} alt={service.title} class="w-6 h-6 text-primary-600" />
              ) : (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{service.title}</h3>
            <p class="text-gray-600 mb-6">
              {service.shortDescription || service.description}
            </p>
            <a href={`/services/${service.slug?.current || '#'}`} class="text-primary-600 hover:text-primary-700 font-medium">
              Learn More â†’
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Why Choose EA Soft Lab?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We combine technical expertise with business acumen to deliver solutions that drive real results
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">{company.stats?.projectsCompleted || 50}+</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Projects Completed</h3>
          <p class="text-gray-600">Successfully delivered projects across various industries</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">{company.stats?.yearsExperience || 5}+</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Years Experience</h3>
          <p class="text-gray-600">Deep expertise in modern technologies and best practices</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">{company.stats?.happyClients || 30}+</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Happy Clients</h3>
          <p class="text-gray-600">Satisfied clients across various industries</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">{company.stats?.clientSatisfaction || 100}%</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Client Satisfaction</h3>
          <p class="text-gray-600">Dedicated to exceeding client expectations</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">What Our Clients Say</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">Real feedback from businesses we've helped transform</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
          <div class="flex mb-4">
            {Array.from({ length: 5 }, (_, i) => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <blockquote class="text-gray-700 mb-6 italic">
            "EA Soft Lab transformed our business with their custom software solution. The team's expertise and dedication exceeded our expectations. We've seen a 300% increase in efficiency since implementation."
          </blockquote>
          <div class="flex items-center">
            <div>
              <div class="font-semibold text-gray-900">Sarah Johnson</div>
              <div class="text-sm text-gray-600">CTO</div>
              <div class="text-sm text-primary-600 font-medium">TechCorp Solutions</div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
          <div class="flex mb-4">
            {Array.from({ length: 5 }, (_, i) => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <blockquote class="text-gray-700 mb-6 italic">
            "The mobile app they developed for us has revolutionized our customer experience. Their attention to detail and user-centric approach made all the difference."
          </blockquote>
          <div class="flex items-center">
            <div>
              <div class="font-semibold text-gray-900">Michael Chen</div>
              <div class="text-sm text-gray-600">Product Manager</div>
              <div class="text-sm text-primary-600 font-medium">InnovateMobile</div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
          <div class="flex mb-4">
            {Array.from({ length: 5 }, (_, i) => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <blockquote class="text-gray-700 mb-6 italic">
            "Outstanding service from start to finish. The team's technical expertise and business understanding helped us scale our operations efficiently."
          </blockquote>
          <div class="flex items-center">
            <div>
              <div class="font-semibold text-gray-900">Emily Rodriguez</div>
              <div class="text-sm text-gray-600">Operations Director</div>
              <div class="text-sm text-primary-600 font-medium">Global Logistics Inc</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Studies Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Success Stories</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">Real projects that delivered exceptional results</p>
      </div>
      
      <div class="space-y-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <div class="bg-gray-100 rounded-lg p-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-2">E-commerce Platform Transformation</h3>
              <p class="text-primary-600 font-medium mb-4">TechCorp Solutions</p>
              <p class="text-gray-600 mb-6">Complete overhaul of legacy e-commerce system with modern architecture and enhanced user experience.</p>
              
              <div class="space-y-4">
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">Challenge</h4>
                  <p class="text-gray-600">Outdated system causing 40% cart abandonment and poor mobile experience</p>
                </div>
                
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">Solution</h4>
                  <p class="text-gray-600">Modern React-based platform with mobile-first design and advanced analytics</p>
                </div>
                
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">Technologies Used</h4>
                  <div class="flex flex-wrap gap-2">
                    <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm">React</span>
                    <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm">Node.js</span>
                    <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm">MongoDB</span>
                    <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm">AWS</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div>
            <div class="bg-primary-50 rounded-lg p-6">
              <h4 class="text-xl font-bold text-gray-900 mb-6">Results</h4>
              <div class="space-y-4">
                <div class="bg-white rounded-lg p-4 shadow-sm">
                  <div class="text-2xl font-bold text-primary-600 mb-1">300%</div>
                  <div class="font-semibold text-gray-900 mb-1">Increase in Efficiency</div>
                  <div class="text-sm text-gray-600">Streamlined operations and automated processes</div>
                </div>
                <div class="bg-white rounded-lg p-4 shadow-sm">
                  <div class="text-2xl font-bold text-primary-600 mb-1">60%</div>
                  <div class="font-semibold text-gray-900 mb-1">Reduction in Cart Abandonment</div>
                  <div class="text-sm text-gray-600">Improved user experience and mobile optimization</div>
                </div>
                <div class="bg-white rounded-lg p-4 shadow-sm">
                  <div class="text-2xl font-bold text-primary-600 mb-1">2.5x</div>
                  <div class="font-semibold text-gray-900 mb-1">Faster Load Times</div>
                  <div class="text-sm text-gray-600">Optimized performance and CDN implementation</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Transform Your Business?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
        Let's discuss how our software solutions can help you achieve your business goals and drive growth.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="bg-white text-primary-600 hover:bg-gray-100 px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200"
        >
          Get Free Consultation
        </a>
        <a
          href="/portfolio"
          class="border-2 border-white text-white hover:bg-white hover:text-primary-600 px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200"
        >
          View Our Work
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<!-- FAQ Schema for SEO -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What services does EA Soft Lab offer?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EA Soft Lab offers web development, mobile app development, custom software development, cloud solutions, IT consulting, and maintenance & support services."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take to complete a software project?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Project timelines vary depending on complexity and scope. Simple web applications may take 4-8 weeks, while complex enterprise software can take 3-6 months or more."
      }
    },
    {
      "@type": "Question",
      "name": "Do you provide ongoing support after project completion?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, we offer 24/7 maintenance and support services to ensure your software runs smoothly and stays up-to-date with the latest technologies and security patches."
      }
    }
  ]
})} /> 