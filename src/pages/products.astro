---
import Layout from '../layouts/Layout.astro';
import { getCompanyInfo } from '../lib/queries.js';
import SanityImage from '../components/SanityImage.astro';

// Fetch company info for dynamic content
const companyInfo = await getCompanyInfo();

// SEO metadata
const title = 'Products & Tools | EA Soft Lab - Custom Software Solutions';
const description = 'Discover our innovative software products and development tools. From SaaS platforms to custom development tools, we create solutions that drive business growth.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Our Products & Tools
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Innovative software solutions designed to streamline your business operations and boost productivity
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Products</h2>
        <p class="text-lg text-gray-600">Discover our flagship software solutions</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- SaaS Platform -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">SaaS Platform</h3>
            <p class="text-gray-600 mb-4">Comprehensive SaaS solution for modern businesses with advanced features and scalability.</p>
            <div class="flex items-center justify-between">
              <span class="text-primary-600 font-medium">Available Now</span>
              <a href="/products/saas-platform" class="text-primary-600 hover:text-primary-700 font-medium">Learn More →</a>
            </div>
          </div>
        </div>

        <!-- Development Tools -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <div class="h-48 bg-gradient-to-br from-green-500 to-teal-600 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Development Tools</h3>
            <p class="text-gray-600 mb-4">Professional development tools to accelerate your software development process.</p>
            <div class="flex items-center justify-between">
              <span class="text-primary-600 font-medium">Available Now</span>
              <a href="/products/tools" class="text-primary-600 hover:text-primary-700 font-medium">Learn More →</a>
            </div>
          </div>
        </div>

        <!-- Coming Soon -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <div class="h-48 bg-gradient-to-br from-orange-500 to-red-600 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Coming Soon</h3>
            <p class="text-gray-600 mb-4">Exciting new products in development. Stay tuned for innovative solutions.</p>
            <div class="flex items-center justify-between">
              <span class="text-orange-600 font-medium">In Development</span>
              <a href="/products/coming-soon" class="text-primary-600 hover:text-primary-700 font-medium">Learn More →</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Categories -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Product Categories</h2>
        <p class="text-lg text-gray-600">Explore our range of software solutions</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Business Solutions -->
        <div class="bg-white rounded-lg p-8 shadow-md">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">Business Solutions</h3>
          </div>
          <p class="text-gray-600 mb-4">Comprehensive software solutions designed to streamline business operations and improve efficiency.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• CRM & ERP Systems</li>
            <li>• Project Management Tools</li>
            <li>• Analytics & Reporting</li>
            <li>• Workflow Automation</li>
          </ul>
        </div>

        <!-- Development Tools -->
        <div class="bg-white rounded-lg p-8 shadow-md">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">Development Tools</h3>
          </div>
          <p class="text-gray-600 mb-4">Professional tools and utilities to accelerate development and improve code quality.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li>• Code Generators</li>
            <li>• Testing Frameworks</li>
            <li>• Deployment Tools</li>
            <li>• Performance Monitors</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Explore our products and discover how they can transform your business operations
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200">
          Get a Demo
        </a>
        <a href="/portfolio" class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors duration-200">
          View Case Studies
        </a>
      </div>
    </div>
  </section>
</Layout> 