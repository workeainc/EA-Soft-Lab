---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Our Services - Web Development, Mobile Apps, Custom Software"
  description="Comprehensive software development services including web development, mobile applications, custom software, cloud solutions, and IT consulting."
>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Our Services
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We offer end-to-end software solutions designed to transform your business and drive growth through innovative technology.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Web Development -->
        <div id="web-development" class="scroll-mt-24 bg-white p-8 rounded-xl shadow-lg border border-gray-100">
          <div class="w-16 h-16 bg-primary-100 rounded-xl flex items-center justify-center mb-6">
