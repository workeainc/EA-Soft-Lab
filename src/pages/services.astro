---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { getCompanyInfo } from '../lib/queries.js';

// Fetch company info for dynamic content
const companyInfo = await getCompanyInfo();

// SEO metadata
const title = 'Services | EA Soft Lab - Custom Software Development Solutions';
const description = 'Comprehensive software development services including web development, mobile apps, custom software, UI/UX design, and digital transformation solutions.';
---

<Layout title={title} description={description}>
  <!-- Main Content with Continuous Dark Background -->
  <div class="relative overflow-hidden" style="background-color: hsl(230, 30%, 5%); background-image: radial-gradient(at 20% 20%, hsl(210, 60%, 20%) 0px, transparent 50%), radial-gradient(at 80% 80%, hsl(240, 50%, 15%) 0px, transparent 50%);">
    
    <!-- Breadcrumb Navigation -->
    <Breadcrumb 
      items={[
        { name: "Home", url: "https://easoftlab.com", position: 1 },
        { name: "Services", url: "https://easoftlab.com/services", position: 2 }
      ]} 
    />
    
    <!-- Hero Section -->
    <div class="pt-40 pb-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
                  <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 mt-8 pt-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          Our Services
        </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            Comprehensive software development solutions tailored to your business needs. From concept to deployment, we handle every aspect of your digital transformation.
          </p>
        </div>
      </div>
    </div>

    <!-- Services Grid -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Web Development -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 200ms">
            <div class="h-48 bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">Web Development</h3>
              <p class="text-gray-300 mb-4">Modern, responsive web applications built with the latest technologies and best practices.</p>
              <ul class="space-y-1 text-sm text-gray-300 mb-4">
                <li>• React & Next.js</li>
                <li>• Node.js & Express</li>
                <li>• Database Design</li>
                <li>• API Development</li>
              </ul>
              <a href="/services/web-development" class="text-primary-400 hover:text-primary-300 font-medium">Learn More →</a>
            </div>
          </div>

          <!-- Mobile Development -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 400ms">
            <div class="h-48 bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">Mobile Development</h3>
              <p class="text-gray-300 mb-4">Native and cross-platform mobile applications for iOS and Android platforms.</p>
              <ul class="space-y-1 text-sm text-gray-300 mb-4">
                <li>• React Native</li>
                <li>• Flutter</li>
                <li>• Native iOS/Android</li>
                <li>• App Store Optimization</li>
              </ul>
              <a href="/services/mobile-development" class="text-primary-400 hover:text-primary-300 font-medium">Learn More →</a>
            </div>
          </div>

          <!-- UI/UX Design -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 600ms">
            <div class="h-48 bg-gradient-to-br from-purple-500 to-violet-600 flex items-center justify-center">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">UI/UX Design</h3>
              <p class="text-gray-300 mb-4">User-centered design that creates intuitive and engaging digital experiences.</p>
              <ul class="space-y-1 text-sm text-gray-300 mb-4">
                <li>• User Research</li>
                <li>• Wireframing & Prototyping</li>
                <li>• Visual Design</li>
                <li>• Usability Testing</li>
              </ul>
              <a href="/services/ui-ux-design" class="text-primary-400 hover:text-primary-300 font-medium">Learn More →</a>
            </div>
          </div>

          <!-- Custom Software -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 800ms">
            <div class="h-48 bg-gradient-to-br from-orange-500 to-amber-600 flex items-center justify-center">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">Custom Software</h3>
              <p class="text-gray-300 mb-4">Tailored software solutions designed to meet your specific business requirements.</p>
              <ul class="space-y-1 text-sm text-gray-300 mb-4">
                <li>• Business Analysis</li>
                <li>• Custom Development</li>
                <li>• Integration Services</li>
                <li>• Maintenance & Support</li>
              </ul>
              <a href="/services/custom-software" class="text-primary-400 hover:text-primary-300 font-medium">Learn More →</a>
            </div>
          </div>

          <!-- SaaS Development -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1000ms">
            <div class="h-48 bg-gradient-to-br from-red-500 to-pink-600 flex items-center justify-center">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">SaaS Development</h3>
              <p class="text-gray-300 mb-4">Scalable software-as-a-service platforms with subscription management and analytics.</p>
              <ul class="space-y-1 text-sm text-gray-300 mb-4">
                <li>• Multi-tenant Architecture</li>
                <li>• Subscription Management</li>
                <li>• Analytics Dashboard</li>
                <li>• API Development</li>
              </ul>
              <a href="/services/saas-development" class="text-primary-400 hover:text-primary-300 font-medium">Learn More →</a>
            </div>
          </div>

          <!-- CRM & ERP -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group shadow-lg opacity-0 transform translate-y-8 transition-all duration-1000 ease-out hover:scale-105 hover:shadow-2xl" data-lazy-animate style="animation-delay: 1200ms">
            <div class="h-48 bg-gradient-to-br from-indigo-500 to-blue-600 flex items-center justify-center">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">CRM & ERP</h3>
              <p class="text-gray-300 mb-4">Enterprise resource planning and customer relationship management solutions.</p>
              <ul class="space-y-1 text-sm text-gray-300 mb-4">
                <li>• Customer Management</li>
                <li>• Sales Automation</li>
                <li>• Inventory Management</li>
                <li>• Reporting & Analytics</li>
              </ul>
              <a href="/services/crm-erp" class="text-primary-400 hover:text-primary-300 font-medium">Learn More →</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Why Choose Us -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-4">Why Choose EA Soft Lab?</h2>
          <p class="text-lg text-gray-300">We bring expertise, innovation, and dedication to every project. Explore our <a href="/about/team" class="text-primary-400 hover:text-primary-300 underline">expert team</a> and <a href="/portfolio" class="text-primary-400 hover:text-primary-300 underline">successful projects</a>.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Expert Team</h3>
            <p class="text-gray-300">Experienced developers and designers with deep technical expertise</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Fast Delivery</h3>
            <p class="text-gray-300">Agile development process ensuring timely project delivery</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">24/7 Support</h3>
            <p class="text-gray-300">Round-the-clock technical support and maintenance services</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Process -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <h2 class="text-3xl font-bold text-white mb-4">Our Development Process</h2>
          <p class="text-lg text-gray-300">A proven methodology that ensures successful project delivery</p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 200ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">1</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Discovery</h3>
            <p class="text-gray-300 text-sm">Understanding your requirements and business goals</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 400ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">2</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Planning</h3>
            <p class="text-gray-300 text-sm">Creating detailed project roadmap and architecture</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 600ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">3</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Development</h3>
            <p class="text-gray-300 text-sm">Building your solution with best practices</p>
          </div>

          <div class="text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate style="animation-delay: 800ms">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-xl">4</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Deployment</h3>
            <p class="text-gray-300 text-sm">Launching and maintaining your application</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="py-16 relative z-10" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>Ready to Start Your Project?</h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          Let's discuss how our services can help transform your business
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
          <a href="/contact" class="bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-primary-500/25 animate-bounce-slow">
            Get Free Consultation
          </a>
          <a href="/portfolio" class="bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white/20 px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-300 shadow-lg animate-bounce-slow animation-delay-200">
            View Our Work
          </a>
        </div>
      </div>
    </div>

  </div>
</Layout>

