---
import ThemeLayout from '../layouts/ThemeLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ThemeElements from '../components/ThemeElements.astro';

export interface Props {
  title: string;
  description?: string;
  productName: string;
  productImage?: string;
  price?: string;
  category?: string;
  features?: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
  specifications?: Array<{
    name: string;
    value: string;
  }>;
  benefits?: Array<{
    title: string;
    description: string;
  }>;
  demo?: {
    url: string;
    title: string;
  };
  screenshots?: string[];
  testimonials?: Array<{
    name: string;
    role: string;
    company: string;
    content: string;
    rating: number;
  }>;
  faq?: Array<{
    question: string;
    answer: string;
  }>;
  showHeader?: boolean;
  showFooter?: boolean;
}

const {
  title,
  description,
  productName,
  productImage,
  price,
  category,
  features = [],
  specifications = [],
  benefits = [],
  demo,
  screenshots = [],
  testimonials = [],
  faq = [],
  showHeader = true,
  showFooter = true
} = Astro.props;
---

<ThemeLayout 
  title={title}
  description={description}
>
  {showHeader && <Header />}
  
  <!-- Product Hero Section -->
  <div class="theme-section pt-24 pb-16" data-lazy-load>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Product Info -->
        <div class="opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          <!-- Category Badge -->
          {category && (
            <ThemeElements type="badge" text={category} class="mb-6" />
          )}
          
          <!-- Product Title -->
          <h1 class="text-4xl md:text-5xl font-bold theme-text-primary mb-6">
            {productName}
          </h1>
          
          <!-- Product Description -->
          {description && (
            <p class="text-xl theme-text-secondary mb-8">
              {description}
            </p>
          )}
          
          <!-- Price -->
          {price && (
            <div class="text-3xl font-bold theme-gradient-text mb-8">
              {price}
            </div>
          )}
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <ThemeElements type="button" variant="primary" href="/contact">
              Get Started
            </ThemeElements>
            {demo && (
              <ThemeElements type="button" variant="secondary" href={demo.url}>
                {demo.title}
              </ThemeElements>
            )}
          </div>
          
          <!-- Quick Features -->
          {features.length > 0 && (
            <div class="grid grid-cols-2 gap-4">
              {features.slice(0, 4).map(feature => (
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="theme-text-secondary text-sm">{feature.title}</span>
                </div>
              ))}
            </div>
          )}
        </div>
        
        <!-- Product Image -->
        {productImage && (
          <div class="opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
            <ThemeElements type="card" class="p-0 overflow-hidden">
              <img 
                src={productImage} 
                alt={productName}
                class="w-full h-96 object-cover"
              />
            </ThemeElements>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Features Section -->
  {features.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Key Features
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {features.map((feature, index) => (
            <ThemeElements type="card" class="p-6">
              {feature.icon && (
                <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-500/20 rounded-lg mb-4">
                  <img src={feature.icon} alt={feature.title} class="w-6 h-6" />
                </div>
              )}
              <h3 class="text-xl font-semibold theme-text-primary mb-3">{feature.title}</h3>
              <p class="theme-text-secondary">{feature.description}</p>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- Benefits Section -->
  {benefits.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Why Choose {productName}?
        </h2>
        <div class="grid md:grid-cols-2 gap-12 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {benefits.map((benefit, index) => (
            <ThemeElements type="card" class="p-8">
              <h3 class="text-2xl font-bold theme-text-primary mb-4">{benefit.title}</h3>
              <p class="theme-text-secondary">{benefit.description}</p>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- Specifications Section -->
  {specifications.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Technical Specifications
        </h2>
        <ThemeElements type="card" class="p-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          <div class="grid md:grid-cols-2 gap-6">
            {specifications.map((spec, index) => (
              <div class="flex justify-between py-3 border-b border-white/10">
                <span class="font-semibold theme-text-primary">{spec.name}</span>
                <span class="theme-text-secondary">{spec.value}</span>
              </div>
            ))}
          </div>
        </ThemeElements>
      </div>
    </div>
  )}

  <!-- Screenshots Section -->
  {screenshots.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Product Screenshots
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {screenshots.map((screenshot, index) => (
            <ThemeElements type="card" class="p-0 overflow-hidden">
              <img 
                src={screenshot} 
                alt={`${productName} - Screenshot ${index + 1}`}
                class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
              />
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- Testimonials Section -->
  {testimonials.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          What Users Say
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {testimonials.map((testimonial, index) => (
            <ThemeElements type="card" class="p-6">
              <div class="flex items-center mb-4">
                {[...Array(testimonial.rating)].map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <p class="theme-text-secondary mb-4 italic">"{testimonial.content}"</p>
              <div>
                <p class="font-semibold theme-text-primary">{testimonial.name}</p>
                <p class="text-sm theme-text-muted">{testimonial.role} at {testimonial.company}</p>
              </div>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- FAQ Section -->
  {faq.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Frequently Asked Questions
        </h2>
        <div class="space-y-6 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {faq.map((item, index) => (
            <ThemeElements type="card" class="p-6">
              <h3 class="text-xl font-semibold theme-text-primary mb-3">{item.question}</h3>
              <p class="theme-text-secondary">{item.answer}</p>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- CTA Section -->
  <div class="theme-section py-16" data-lazy-load>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold theme-text-primary mb-6 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
        Ready to Get Started?
      </h2>
      <p class="text-xl theme-text-secondary mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
        Join thousands of users who trust {productName} for their needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
        <ThemeElements type="button" variant="primary" href="/contact">
          Get Started Now
        </ThemeElements>
        <ThemeElements type="button" variant="secondary" href="/products">
          View All Products
        </ThemeElements>
      </div>
    </div>
  </div>

  {showFooter && <Footer />}
</ThemeLayout>

<style>
  /* Product-specific styles */
  .theme-section {
    position: relative;
    z-index: 10;
  }
  
  /* Screenshot hover effects */
  .theme-card img:hover {
    transform: scale(1.05);
  }
  
  /* Smooth transitions for screenshots */
  .theme-card img {
    transition: transform 0.3s ease;
  }
  
  /* FAQ accordion-like styling */
  .theme-card:nth-child(even) {
    background: rgba(255, 255, 255, 0.03);
  }
</style>
