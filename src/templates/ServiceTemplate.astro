---
import ThemeLayout from '../layouts/ThemeLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ThemeElements from '../components/ThemeElements.astro';

export interface Props {
  title: string;
  description?: string;
  serviceName: string;
  serviceIcon?: string;
  features?: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
  process?: Array<{
    step: number;
    title: string;
    description: string;
  }>;
  pricing?: Array<{
    plan: string;
    price: string;
    features: string[];
    popular?: boolean;
  }>;
  testimonials?: Array<{
    name: string;
    role: string;
    company: string;
    content: string;
    rating: number;
  }>;
  showHeader?: boolean;
  showFooter?: boolean;
}

const {
  title,
  description,
  serviceName,
  serviceIcon,
  features = [],
  process = [],
  pricing = [],
  testimonials = [],
  showHeader = true,
  showFooter = true
} = Astro.props;
---

<ThemeLayout 
  title={title}
  description={description}
  type="service"
>
  {showHeader && <Header />}
  
  <!-- Service Hero Section -->
  <div class="theme-section pt-24 pb-16" data-lazy-load>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <!-- Service Icon -->
        {serviceIcon && (
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
            <img src={serviceIcon} alt={serviceName} class="w-10 h-10" />
          </div>
        )}
        
        <!-- Service Title -->
        <h1 class="text-4xl md:text-5xl font-bold theme-text-primary mb-6 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {serviceName}
        </h1>
        
        <!-- Service Description -->
        {description && (
          <p class="text-xl theme-text-secondary max-w-3xl mx-auto opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
            {description}
          </p>
        )}
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-600" data-lazy-animate>
          <ThemeElements type="button" variant="primary" href="/contact">
            Get Started
          </ThemeElements>
          <ThemeElements type="button" variant="secondary" href="#features">
            Learn More
          </ThemeElements>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  {features.length > 0 && (
    <div id="features" class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Key Features
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {features.map((feature, index) => (
            <ThemeElements type="card" class="p-6 text-center">
              {feature.icon && (
                <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-500/20 rounded-lg mb-4">
                  <img src={feature.icon} alt={feature.title} class="w-6 h-6" />
                </div>
              )}
              <h3 class="text-xl font-semibold theme-text-primary mb-3">{feature.title}</h3>
              <p class="theme-text-secondary">{feature.description}</p>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- Process Section -->
  {process.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Our Process
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {process.map((step, index) => (
            <div class="relative">
              <ThemeElements type="card" class="p-6">
                <div class="absolute -top-4 -left-4 w-8 h-8 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                  {step.step}
                </div>
                <h3 class="text-xl font-semibold theme-text-primary mb-3 mt-4">{step.title}</h3>
                <p class="theme-text-secondary">{step.description}</p>
              </ThemeElements>
            </div>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- Pricing Section -->
  {pricing.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          Pricing Plans
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {pricing.map((plan, index) => (
            <ThemeElements type="card" class={`p-6 relative ${plan.popular ? 'ring-2 ring-primary-500' : ''}`}>
              {plan.popular && (
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                  <ThemeElements type="badge" text="Most Popular" />
                </div>
              )}
              <h3 class="text-2xl font-bold theme-text-primary mb-2">{plan.plan}</h3>
              <div class="text-3xl font-bold theme-gradient-text mb-6">{plan.price}</div>
              <ul class="space-y-3 mb-8">
                {plan.features.map(feature => (
                  <li class="flex items-center theme-text-secondary">
                    <svg class="w-5 h-5 text-primary-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <ThemeElements type="button" variant={plan.popular ? "primary" : "secondary"} href="/contact" class="w-full">
                Choose Plan
              </ThemeElements>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- Testimonials Section -->
  {testimonials.length > 0 && (
    <div class="theme-section py-16" data-lazy-load>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold theme-text-primary mb-12 text-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
          What Our Clients Say
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
          {testimonials.map((testimonial, index) => (
            <ThemeElements type="card" class="p-6">
              <div class="flex items-center mb-4">
                {[...Array(testimonial.rating)].map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <p class="theme-text-secondary mb-4 italic">"{testimonial.content}"</p>
              <div>
                <p class="font-semibold theme-text-primary">{testimonial.name}</p>
                <p class="text-sm theme-text-muted">{testimonial.role} at {testimonial.company}</p>
              </div>
            </ThemeElements>
          ))}
        </div>
      </div>
    </div>
  )}

  <!-- CTA Section -->
  <div class="theme-section py-16" data-lazy-load>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold theme-text-primary mb-6 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out" data-lazy-animate>
        Ready to Get Started?
      </h2>
      <p class="text-xl theme-text-secondary mb-8 opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-200" data-lazy-animate>
        Let's discuss how we can help you achieve your goals with our {serviceName} service.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-400" data-lazy-animate>
        <ThemeElements type="button" variant="primary" href="/contact">
          Contact Us
        </ThemeElements>
        <ThemeElements type="button" variant="secondary" href="/portfolio">
          View Our Work
        </ThemeElements>
      </div>
    </div>
  </div>

  {showFooter && <Footer />}
</ThemeLayout>

<style>
  /* Service-specific styles */
  .theme-section {
    position: relative;
    z-index: 10;
  }
  
  /* Process step connector lines */
  .theme-section:nth-child(4) .theme-card:not(:last-child)::after {
    content: '';
    position: absolute;
    top: 50%;
    right: -4rem;
    width: 2rem;
    height: 2px;
    background: linear-gradient(90deg, #6366f1, #8b5cf6);
    transform: translateY(-50%);
  }
  
  @media (max-width: 768px) {
    .theme-section:nth-child(4) .theme-card::after {
      display: none;
    }
  }
</style>
