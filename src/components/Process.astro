---
export interface Props {
  title?: string;
  description?: string;
  steps?: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
}

const {
  title = "Our Development Process",
  description = "A proven methodology for delivering high-quality software solutions",
  steps = []
} = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">{title}</h2>
      <p class="text-lg text-gray-600">{description}</p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {steps.map((step, index) => (
          <div class="relative">
            <div class="bg-primary-600 text-white w-12 h-12 rounded-full flex items-center justify-center text-xl font-bold mb-4 mx-auto">
              {index + 1}
            </div>
            <div class="text-center">
              {step.icon && (
                <div class="w-16 h-16 mx-auto mb-4 bg-primary-100 rounded-full flex items-center justify-center">
                  <span class="text-primary-600 text-2xl">{step.icon}</span>
                </div>
              )}
              <h3 class="text-xl font-semibold mb-3">{step.title}</h3>
              <p class="text-gray-600">{step.description}</p>
            </div>
            {index < steps.length - 1 && (
              <div class="hidden lg:block absolute top-6 left-full w-full h-0.5 bg-primary-200 transform -translate-y-1/2"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
