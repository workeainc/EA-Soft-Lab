---
export interface Props {
  businessInfo: {
    name: string;
    address: string;
    city: string;
    state: string;
    zipCode: string;
    country: string;
    phone: string;
    email: string;
    hours: string;
    services: string[];
    website: string;
    description: string;
    founded: string;
    employees: string;
    certifications: string[];
    awards: string[];
    serviceAreas: Array<{
      city: string;
      state: string;
      radius: string;
    }>;
    reviews: Array<{
      author: string;
      rating: number;
      review: string;
      date: string;
    }>;
    socialProfiles: Array<{
      platform: string;
      url: string;
    }>;
  };
  showReviews?: boolean;
  showServiceAreas?: boolean;
  showCertifications?: boolean;
}

const { 
  businessInfo, 
  showReviews = true, 
  showServiceAreas = true, 
  showCertifications = true 
} = Astro.props;
---

<section class="py-16 relative z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Visit Our Office
      </h2>
      <p class="text-lg text-gray-300 max-w-3xl mx-auto">
        Located in the heart of the tech community, our office is easily accessible and ready to welcome you for consultations and project discussions.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Business Information -->
      <div class="space-y-8">
        <!-- Contact Information -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-white mb-4">Contact Information</h3>
          <div class="space-y-4">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-primary-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <h4 class="font-semibold text-white">Address</h4>
                <p class="text-gray-300">
                  {businessInfo.address}<br />
                  {businessInfo.city}, {businessInfo.state} {businessInfo.zipCode}<br />
                  {businessInfo.country}
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="w-6 h-6 text-primary-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <div>
                <h4 class="font-semibold text-white">Phone</h4>
                <a href={`tel:${businessInfo.phone}`} class="text-primary-400 hover:text-primary-300 transition-colors">
                  {businessInfo.phone}
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="w-6 h-6 text-primary-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div>
                <h4 class="font-semibold text-white">Email</h4>
                <a href={`mailto:${businessInfo.email}`} class="text-primary-400 hover:text-primary-300 transition-colors">
                  {businessInfo.email}
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="w-6 h-6 text-primary-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h4 class="font-semibold text-white">Business Hours</h4>
                <p class="text-gray-300">{businessInfo.hours}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Services Offered -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-white mb-4">Services Offered</h3>
          <div class="flex flex-wrap gap-2">
            {businessInfo.services.map((service) => (
              <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm font-medium border border-primary-400/30">
                {service}
              </span>
            ))}
          </div>
        </div>

        <!-- Certifications & Awards -->
        {showCertifications && businessInfo.certifications && businessInfo.certifications.length > 0 && (
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4">Certifications & Awards</h3>
            <div class="space-y-3">
              {businessInfo.certifications.map((cert) => (
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-300">{cert}</span>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Service Areas -->
        {showServiceAreas && businessInfo.serviceAreas && businessInfo.serviceAreas.length > 0 && (
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4">Service Areas</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              {businessInfo.serviceAreas.map((area) => (
                <div class="flex items-center">
                  <svg class="w-4 h-4 text-primary-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-300">{area.city}, {area.state} ({area.radius})</span>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
      
      <!-- Map and Reviews -->
      <div class="space-y-6">
        <!-- Interactive Map -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-white mb-4">Our Location</h3>
          <div class="bg-gray-800 rounded-lg flex items-center justify-center h-64">
            <div class="text-center">
              <svg class="w-16 h-16 text-primary-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-1.447-.894L15 4m0 13V4m-6 3l6-3" />
              </svg>
              <p class="text-gray-300 mb-2">Interactive Map Coming Soon</p>
              <p class="text-sm text-gray-400">{businessInfo.address}</p>
            </div>
          </div>
        </div>

        <!-- Customer Reviews -->
        {showReviews && businessInfo.reviews && businessInfo.reviews.length > 0 && (
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4">Customer Reviews</h3>
            <div class="space-y-4">
              {businessInfo.reviews.slice(0, 3).map((review) => (
                <div class="border border-white/10 rounded-lg p-4">
                  <div class="flex items-center mb-2">
                    <div class="flex text-yellow-400">
                      {[...Array(5)].map((_, i) => (
                        <svg class={`w-4 h-4 ${i < review.rating ? 'text-yellow-400' : 'text-gray-600'}`} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <span class="text-sm text-gray-400 ml-2">{review.date}</span>
                  </div>
                  <p class="text-gray-300 text-sm mb-2">{review.review}</p>
                  <p class="text-primary-400 font-medium text-sm">- {review.author}</p>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<!-- Enhanced Local Business Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": businessInfo.name,
  "description": businessInfo.description,
  "url": businessInfo.website,
  "telephone": businessInfo.phone,
  "email": businessInfo.email,
  "foundingDate": businessInfo.founded,
  "numberOfEmployees": businessInfo.employees,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": businessInfo.address,
    "addressLocality": businessInfo.city,
    "addressRegion": businessInfo.state,
    "postalCode": businessInfo.zipCode,
    "addressCountry": businessInfo.country
  },
  "openingHours": businessInfo.hours,
  "serviceArea": businessInfo.serviceAreas ? {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "40.7128",
      "longitude": "-74.0060"
    },
    "geoRadius": "50000"
  } : undefined,
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Software Development Services",
    "itemListElement": businessInfo.services.map(service => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service
      }
    }))
  },
  "review": businessInfo.reviews ? businessInfo.reviews.map(review => ({
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": review.rating,
      "bestRating": 5
    },
    "author": {
      "@type": "Person",
      "name": review.author
    },
    "reviewBody": review.review,
    "datePublished": review.date
  })) : undefined,
  "aggregateRating": businessInfo.reviews ? {
    "@type": "AggregateRating",
    "ratingValue": (businessInfo.reviews.reduce((sum, review) => sum + review.rating, 0) / businessInfo.reviews.length).toFixed(1),
    "reviewCount": businessInfo.reviews.length,
    "bestRating": 5,
    "worstRating": 1
  } : undefined,
  "sameAs": businessInfo.socialProfiles ? businessInfo.socialProfiles.map(profile => profile.url) : undefined,
  "award": businessInfo.awards || undefined,
  "certification": businessInfo.certifications || undefined
})} /> 