---
export interface Props {
  name: string;
  title: string;
  bio: string;
  avatar?: string;
  credentials?: {
    degree?: string;
    certifications?: string[];
    experience?: string;
    expertise?: string[];
  };
  social?: {
    linkedin?: string;
    github?: string;
    twitter?: string;
    website?: string;
    portfolio?: string;
  };
  achievements?: {
    awards?: string[];
    publications?: string[];
    speaking?: string[];
    patents?: string[];
  };
  verified?: boolean;
  reviewCount?: number;
  rating?: number;
  company?: string;
  location?: string;
  languages?: string[];
  availability?: 'Available' | 'Limited' | 'Unavailable';
}

const {
  name,
  title,
  bio,
  avatar,
  credentials = {},
  social = {},
  achievements = {},
  verified = false,
  reviewCount = 0,
  rating = 5,
  company = "EA Soft Lab",
  location,
  languages = ["English"],
  availability = "Available"
} = Astro.props;

// Generate Person schema for E-E-A-T signals
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": name,
  "jobTitle": title,
  "description": bio,
  "image": avatar,
  "worksFor": {
    "@type": "Organization",
    "name": company
  },
  "knowsAbout": credentials.expertise || [],
  "alumniOf": credentials.degree ? {
    "@type": "CollegeOrUniversity",
    "name": credentials.degree
  } : undefined,
  "hasCredential": credentials.certifications?.map(cert => ({
    "@type": "EducationalOccupationalCredential",
    "name": cert
  })) || [],
  "award": achievements.awards?.map(award => ({
    "@type": "Award",
    "name": award
  })) || [],
  "sameAs": Object.values(social).filter(Boolean),
  "address": location ? {
    "@type": "PostalAddress",
    "addressLocality": location
  } : undefined,
  "knowsLanguage": languages,
  "review": reviewCount > 0 ? {
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": rating,
      "bestRating": 5
    },
    "reviewCount": reviewCount
  } : undefined
};
---

<div class="author-profile bg-white rounded-lg shadow-lg overflow-hidden">
  <!-- Header -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-6">
    <div class="flex items-center">
      {avatar ? (
        <img 
          src={avatar} 
          alt={`${name} - ${title}`}
          class="w-16 h-16 rounded-full border-2 border-white"
        />
      ) : (
        <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center text-2xl font-bold">
          {name.charAt(0)}
        </div>
      )}
      
      <div class="ml-4 flex-1">
        <div class="flex items-center">
          <h2 class="text-xl font-bold">{name}</h2>
          {verified && (
            <svg class="w-5 h-5 ml-2 text-blue-200" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          )}
        </div>
        <p class="text-blue-100">{title}</p>
        <p class="text-sm text-blue-200">{company}</p>
      </div>
      
      <div class="text-right">
        <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${
          availability === 'Available' ? 'bg-green-100 text-green-800' :
          availability === 'Limited' ? 'bg-yellow-100 text-yellow-800' :
          'bg-red-100 text-red-800'
        }`}>
          {availability}
        </span>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <!-- Bio -->
    <div class="mb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">About</h3>
      <p class="text-gray-700 leading-relaxed">{bio}</p>
    </div>

    <!-- Credentials -->
    {credentials.degree || credentials.certifications?.length || credentials.expertise?.length ? (
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Credentials & Expertise</h3>
        <div class="space-y-3">
          {credentials.degree && (
            <div class="flex items-center">
              <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
              </svg>
              <span class="text-gray-700">{credentials.degree}</span>
            </div>
          )}
          
          {credentials.certifications?.map(cert => (
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">{cert}</span>
            </div>
          ))}
          
          {credentials.expertise?.map(skill => (
            <span class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm mr-2 mb-2">
              {skill}
            </span>
          ))}
        </div>
      </div>
    ) : null}

    <!-- Achievements -->
    {achievements.awards?.length || achievements.publications?.length || achievements.speaking?.length ? (
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Achievements</h3>
        <div class="space-y-3">
          {achievements.awards?.map(award => (
            <div class="flex items-center">
              <svg class="w-5 h-5 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span class="text-gray-700">{award}</span>
            </div>
          ))}
          
          {achievements.publications?.map(pub => (
            <div class="flex items-center">
              <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">{pub}</span>
            </div>
          ))}
          
          {achievements.speaking?.map(event => (
            <div class="flex items-center">
              <svg class="w-5 h-5 text-purple-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">{event}</span>
            </div>
          ))}
        </div>
      </div>
    ) : null}

    <!-- Reviews & Rating -->
    {reviewCount > 0 && (
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Client Reviews</h3>
        <div class="flex items-center">
          <div class="flex items-center">
            {Array.from({ length: 5 }, (_, i) => (
              <svg class={`w-5 h-5 ${i < rating ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="ml-2 text-gray-600">{rating}/5 ({reviewCount} reviews)</span>
        </div>
      </div>
    )}

    <!-- Social Links -->
    {Object.keys(social).length > 0 && (
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Connect</h3>
        <div class="flex space-x-3">
          {social.linkedin && (
            <a href={social.linkedin} class="text-blue-600 hover:text-blue-700" target="_blank" rel="noopener noreferrer">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
          
          {social.github && (
            <a href={social.github} class="text-gray-600 hover:text-gray-700" target="_blank" rel="noopener noreferrer">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          )}
          
          {social.twitter && (
            <a href={social.twitter} class="text-blue-400 hover:text-blue-500" target="_blank" rel="noopener noreferrer">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          )}
          
          {social.website && (
            <a href={social.website} class="text-gray-600 hover:text-gray-700" target="_blank" rel="noopener noreferrer">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9" />
              </svg>
            </a>
          )}
        </div>
      </div>
    )}

    <!-- Additional Info -->
    <div class="border-t pt-6">
      <div class="grid grid-cols-2 gap-4 text-sm">
        {location && (
          <div>
            <span class="text-gray-500">Location:</span>
            <span class="ml-2 text-gray-700">{location}</span>
          </div>
        )}
        
        {languages.length > 0 && (
          <div>
            <span class="text-gray-500">Languages:</span>
            <span class="ml-2 text-gray-700">{languages.join(', ')}</span>
          </div>
        )}
        
        {credentials.experience && (
          <div>
            <span class="text-gray-500">Experience:</span>
            <span class="ml-2 text-gray-700">{credentials.experience}</span>
          </div>
        )}
      </div>
    </div>
  </div>
</div>

<!-- Person Schema for E-E-A-T -->
<script type="application/ld+json" set:html={JSON.stringify(personSchema)} /> 