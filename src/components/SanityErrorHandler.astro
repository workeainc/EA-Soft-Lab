---
// This component handles Sanity CMS errors gracefully
---

<script>
  // Suppress Sanity CMS errors in development
  if (typeof window !== 'undefined') {
    const originalError = console.error;
    console.error = function(...args) {
      // Filter out Sanity authentication errors
      const message = args.join(' ');
      if (message.includes('Unauthorized - Session not found') || 
          message.includes('@sanity/client') ||
          message.includes('Sanity CMS Error')) {
        // Suppress these errors in development
        console.warn('Sanity CMS: Using fallback data (development mode)');
        return;
      }
      originalError.apply(console, args);
    };
  }
</script> 