---
export interface Props {
  localSEOData: {
    googleMyBusiness: {
      views: number;
      clicks: number;
      calls: number;
      directionRequests: number;
      reviews: number;
      averageRating: number;
    };
    localRankings: Array<{
      keyword: string;
      position: number;
      searchVolume: number;
      change: number;
    }>;
    localCompetitors: Array<{
      name: string;
      distance: string;
      rating: number;
      reviews: number;
      services: string[];
    }>;
    localContent: Array<{
      title: string;
      type: string;
      performance: number;
      localKeywords: string[];
    }>;
  };
}

const { localSEOData } = Astro.props;
---

<section class="py-16 relative z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Local SEO Dashboard
      </h2>
      <p class="text-lg text-gray-300 max-w-3xl mx-auto">
        Monitor your local search performance, Google My Business metrics, and local competitor analysis
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
      <!-- Google My Business Metrics -->
      <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
        <h3 class="text-xl font-semibold text-white mb-6">Google My Business</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-gray-300">Profile Views</span>
            <span class="text-white font-semibold">{localSEOData.googleMyBusiness.views.toLocaleString()}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-300">Clicks</span>
            <span class="text-white font-semibold">{localSEOData.googleMyBusiness.clicks.toLocaleString()}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-300">Phone Calls</span>
            <span class="text-white font-semibold">{localSEOData.googleMyBusiness.calls.toLocaleString()}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-300">Direction Requests</span>
            <span class="text-white font-semibold">{localSEOData.googleMyBusiness.directionRequests.toLocaleString()}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-300">Reviews</span>
            <span class="text-white font-semibold">{localSEOData.googleMyBusiness.reviews}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-300">Average Rating</span>
            <div class="flex items-center">
              <span class="text-white font-semibold mr-2">{localSEOData.googleMyBusiness.averageRating}</span>
              <div class="flex text-yellow-400">
                {[...Array(5)].map((_, i) => (
                  <svg class={`w-4 h-4 ${i < localSEOData.googleMyBusiness.averageRating ? 'text-yellow-400' : 'text-gray-600'}`} fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Local Rankings -->
      <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
        <h3 class="text-xl font-semibold text-white mb-6">Local Rankings</h3>
        <div class="space-y-4">
          {localSEOData.localRankings.slice(0, 5).map((ranking) => (
            <div class="flex justify-between items-center">
              <div class="flex-1">
                <span class="text-gray-300 text-sm">{ranking.keyword}</span>
                <div class="flex items-center mt-1">
                  <span class="text-white font-semibold mr-2">#{ranking.position}</span>
                  <span class={`text-sm ${ranking.change > 0 ? 'text-green-400' : ranking.change < 0 ? 'text-red-400' : 'text-gray-400'}`}>
                    {ranking.change > 0 ? '+' : ''}{ranking.change}
                  </span>
                </div>
              </div>
              <span class="text-gray-400 text-sm">{ranking.searchVolume.toLocaleString()}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Local Competitors -->
      <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
        <h3 class="text-xl font-semibold text-white mb-6">Local Competitors</h3>
        <div class="space-y-4">
          {localSEOData.localCompetitors.slice(0, 4).map((competitor) => (
            <div class="border border-white/10 rounded-lg p-3">
              <div class="flex justify-between items-start mb-2">
                <span class="text-white font-medium">{competitor.name}</span>
                <span class="text-gray-400 text-sm">{competitor.distance}</span>
              </div>
              <div class="flex items-center mb-2">
                <div class="flex text-yellow-400 mr-2">
                  {[...Array(5)].map((_, i) => (
                    <svg class={`w-3 h-3 ${i < competitor.rating ? 'text-yellow-400' : 'text-gray-600'}`} fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <span class="text-gray-400 text-sm">{competitor.reviews} reviews</span>
              </div>
              <div class="flex flex-wrap gap-1">
                {competitor.services.slice(0, 3).map((service) => (
                  <span class="bg-primary-500/20 text-primary-400 px-2 py-1 rounded text-xs border border-primary-400/30">
                    {service}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Local Content Performance -->
    <div class="mt-12">
      <h3 class="text-2xl font-semibold text-white mb-6">Local Content Performance</h3>
      <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {localSEOData.localContent.map((content) => (
            <div class="border border-white/10 rounded-lg p-4">
              <div class="flex justify-between items-start mb-3">
                <h4 class="text-white font-medium">{content.title}</h4>
                <span class="bg-primary-500/20 text-primary-400 px-2 py-1 rounded text-xs border border-primary-400/30">
                  {content.type}
                </span>
              </div>
              <div class="flex items-center mb-3">
                <div class="w-full bg-gray-700 rounded-full h-2 mr-3">
                  <div class="bg-primary-500 h-2 rounded-full" style={`width: ${content.performance}%`}></div>
                </div>
                <span class="text-white text-sm">{content.performance}%</span>
              </div>
              <div class="flex flex-wrap gap-1">
                {content.localKeywords.slice(0, 3).map((keyword) => (
                  <span class="bg-white/10 text-gray-300 px-2 py-1 rounded text-xs border border-white/20">
                    {keyword}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Local SEO Recommendations -->
    <div class="mt-12">
      <h3 class="text-2xl font-semibold text-white mb-6">Local SEO Recommendations</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
          <h4 class="text-lg font-semibold text-white mb-4">Immediate Actions</h4>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">Optimize Google My Business profile with local keywords</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">Encourage customer reviews and respond to them</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">Create location-specific content and landing pages</span>
            </li>
          </ul>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6">
          <h4 class="text-lg font-semibold text-white mb-4">Long-term Strategy</h4>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">Build local citations and directory listings</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">Develop local partnerships and collaborations</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">Implement local schema markup and structured data</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Local SEO Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Local SEO Dashboard",
  "description": "Monitor local search performance, Google My Business metrics, and local competitor analysis",
  "mainEntity": {
    "@type": "Organization",
    "name": "EA Soft Lab",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "New York",
      "addressRegion": "NY",
      "addressCountry": "US"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": localSEOData.googleMyBusiness.averageRating,
      "reviewCount": localSEOData.googleMyBusiness.reviews,
      "bestRating": 5,
      "worstRating": 1
    }
  }
})} />
