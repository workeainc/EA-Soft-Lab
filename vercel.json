{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "astro",
  "installCommand": "npm ci --legacy-peer-deps",
  "devCommand": "npm run dev",
  "functions": {
    "src/pages/api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "redirects": [
    {
      "source": "/admin",
      "destination": "/studio",
      "permanent": false
    },
    {
      "source": "/cms",
      "destination": "/studio",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
